---
export interface Props {
	title: string;
	description?: string;
	ogImage?: string;
	keywords?: string;
	robots?: string;
	showCompanyInfo?: boolean;
}

const { 
	title, 
	description = "10Botics - AI教育專家，提供專業STEM及人工智能課程", 
	ogImage = "/images/og-default.jpg",
	keywords = "STEM教育, AI課程, 人工智能, 10教育, 編程課程",
	robots = "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1",
	showCompanyInfo = true
} = Astro.props;

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import GoogleTagManager from '../components/GoogleTagManager.astro';
import GoogleTagManagerNoscript from '../components/GoogleTagManagerNoscript.astro';
import { getGTMId, isGTMEnabled } from '../utils/gtm-config';

// Generate canonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// GTM Configuration
const gtmId = getGTMId();
const gtmEnabled = isGTMEnabled();

// Generate absolute OG image URL - handle both relative and absolute paths
const ogImageURL = ogImage && typeof ogImage === 'string' && ogImage.startsWith('http') 
  ? new URL(ogImage) 
  : new URL(ogImage || '/images/og-default.jpg', Astro.site);

// Structured data for organization
const organizationSchema = {
	"@context": "https://schema.org",
	"@type": "Organization",
	"name": "10教育",
	"alternateName": "10Botics",
	"url": "/",
	"logo": "/images/logo_website_700x200-300x86.png",
	"description": "專業STEM及人工智能教育機構，提供到校課程服務",
	"address": {
		"@type": "PostalAddress",
		"addressCountry": "HK"
	},
	"sameAs": [
		"https://www.facebook.com/10botics"
	]
};
---

<!doctype html>
<html lang="zh-HK">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="robots" content={robots} />
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph Tags -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:site_name" content="10教育" />
		<meta property="og:image" content={ogImageURL} />
		<meta property="og:image:alt" content={title} />
		<meta property="og:locale" content="zh_HK" />
		
		<!-- Favicons -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon-100x100.jpg" sizes="32x32" />
		<link rel="icon" href="/favicon-300x300.jpg" sizes="192x192" />
		<link rel="apple-touch-icon" href="/favicon-300x300.jpg" />
		<meta name="msapplication-TileImage" content="/favicon-300x300.jpg" />
		
		<!-- Generator -->
		<meta name="generator" content={Astro.generator} />
		
		<!-- Google Tag Manager -->
		{gtmEnabled && <GoogleTagManager id={gtmId} />}
		
		<!-- DNS Prefetch for Performance -->
		<link rel="dns-prefetch" href="//fonts.googleapis.com" />
		<link rel="dns-prefetch" href="//fonts.gstatic.com" />
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		
		<!-- Font Awesome -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
		
		<!-- Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
	</head>
	<body class="font-sans bg-white">
		<!-- Google Tag Manager (noscript) -->
		{gtmEnabled && <GoogleTagManagerNoscript id={gtmId} />}
		
		<Header />
		<main>
			<slot />
		</main>
		<Footer showCompanyInfo={showCompanyInfo} />
		<FloatingWhatsApp />
		
		<!-- Speed Insights with beforeSend function -->
		<script is:inline>
			function speedInsightsBeforeSend(data) {
				console.log("Speed Insights before send", data);
				// You can modify or filter the data here before sending
				// For example, remove sensitive URL parameters
				return data;
			}
		</script>
		<SpeedInsights />
	</body>
</html> 