---
export interface Props {
  id: string;
  enabled?: boolean;
}

const { 
  id,
  enabled = true
} = Astro.props;
---

{enabled && (
  <>
    <!-- Google tag (gtag.js) -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${id}`}></script>
    <script is:inline define:vars={{ id }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', id);
    </script>
  </>
)}
