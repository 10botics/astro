---
// Feature section with code example panel - Tailwind UI pattern
export interface Props {
  title: string;
  subtitle: string;
  description: string;
  codeTitle: string;
  codeExample: string;
  language: string;
  features: Array<{
    name: string;
    description: string;
  }>;
}

const { title, subtitle, description, codeTitle, codeExample, language, features } = Astro.props;
---

<section class="overflow-hidden bg-gray-50 py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2">
      <div class="lg:pr-8 lg:pt-4">
        <div class="lg:max-w-lg">
          <h2 class="text-base font-semibold leading-7 text-blue-600">{subtitle}</h2>
          <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{title}</p>
          <p class="mt-6 text-lg leading-8 text-gray-600">{description}</p>
          
          <dl class="mt-10 max-w-xl space-y-8 text-base leading-7 text-gray-600 lg:max-w-none">
            {features.map((feature) => (
              <div class="relative pl-9">
                <dt class="inline font-semibold text-gray-900">
                  <svg class="absolute left-1 top-1 h-5 w-5 text-blue-600" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                  </svg>
                  {feature.name}
                </dt>
                <dd class="inline">{feature.description}</dd>
              </div>
            ))}
          </dl>
        </div>
      </div>
      
      <div class="lg:pt-4">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="bg-gray-800 px-4 py-2 flex items-center">
            <div class="flex space-x-1">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            </div>
            <div class="ml-4 text-sm text-gray-300">{codeTitle}</div>
          </div>
          <div class="p-4 bg-gray-900">
            <pre class="text-sm text-gray-300 overflow-x-auto"><code class={`language-${language}`}>{codeExample}</code></pre>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 