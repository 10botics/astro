---
// Component to recreate the Course Features section with props
interface Props {
  features?: {
    title: string;
    features?: Array<{
      text: string;
      icon?: string;
    }>;
    aiConceptsLink?: string;
    infographicImage?: string;
    demoVideo?: {
      videoId: string;
      title: string;
      description: string;
    };
    aiExamples?: Array<{
      title: string;
      image: string;
    }>;
  };
}

const { features } = Astro.props;

// If no features are provided, don't render anything
if (!features) {
  return null;
}
---

<section class="bg-white py-16">
  <div class="container mx-auto px-4 max-w-6xl">
    <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center" style="color: #1e293b;">{features.title}</h2>
    
    <div class="grid lg:grid-cols-2 gap-12 items-center mb-16">
      <!-- Infographic Section - Left side -->
      {features.infographicImage && (
        <div class="flex justify-center">
          <img 
            src={features.infographicImage}
            alt="AI 五大理念"
            class="w-full h-auto rounded-lg"
          />
        </div>
      )}

      <!-- Features List - Right side -->
      {features.features && features.features.length > 0 && (
        <div class="space-y-4">
          <ul class="space-y-3 text-gray-700">
            {features.features.map((feature) => (
              <li class="flex items-start space-x-3">
                {feature.icon ? (
                  <i class={`${feature.icon} text-blue-500 mt-1 w-5 text-center`}></i>
                ) : (
                  <span class="text-gray-900">•</span>
                )}
                <span>
                  {feature.text.includes('AI 五大理念') && features.aiConceptsLink ? (
                    <>
                      了解 <a href={features.aiConceptsLink} class="text-cyan-400 hover:text-cyan-600">AI 五大理念</a>，趨勢與實踐
                    </>
                  ) : (
                    feature.text
                  )}
                </span>
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>

    <!-- Demo Video Section -->
    {features.demoVideo && (
      <div class="text-center mb-12">
        <div class="max-w-4xl mx-auto">
          <div class="aspect-video bg-black rounded-lg overflow-hidden shadow-lg mb-4">
            <iframe 
              src={`https://www.youtube.com/embed/${features.demoVideo.videoId}?controls=1&rel=0`}
              class="w-full h-full"
              frameborder="0"
              allowfullscreen
              title={features.demoVideo.title}>
            </iframe>
          </div>
          <p class="text-gray-600 text-base">{features.demoVideo.description}</p>
        </div>
      </div>
    )}

    <!-- AI Recognition Examples -->
    {features.aiExamples && features.aiExamples.length > 0 && (
      <div class="grid md:grid-cols-3 gap-8">
        {features.aiExamples.map((example) => (
          <div class="text-center">
            <img 
              src={example.image}
              alt={example.title}
              class="w-full h-48 object-cover rounded-lg mb-4"
            />
            <h3 class="text-xl font-bold text-gray-900 mb-2">{example.title}</h3>
          </div>
        ))}
      </div>
    )}
  </div>
</section> 