---
export interface Props {
  title: string;              // e.g., "課程特色"
  highlights: string[];       // Array of highlight text
  icon?: string;              // Icon type: "star", "check", "arrow"
}

const { title, highlights, icon = "star" } = Astro.props;

// Icon mapping
const iconMap = {
  star: "⭐",
  check: "✅", 
  arrow: "➤",
  dot: "•"
};

const selectedIcon = iconMap[icon] || iconMap.star;
---

{highlights.length > 0 && (
  <section class="bg-white py-16">
    <div class="container mx-auto px-4 max-w-6xl">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center" style="color: #1e293b;">{title}</h2>
      
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {highlights.map((highlight) => (
            <div class="flex items-start space-x-3">
              <span class="text-xl mt-1 flex-shrink-0">{selectedIcon}</span>
              <h3 class="text-lg font-semibold text-gray-900 leading-relaxed">{highlight}</h3>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
)} 