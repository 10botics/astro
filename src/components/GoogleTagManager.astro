---
export interface Props {
  id: string | string[];
  domain?: string;
  container?: string;
}

const { 
  id, 
  domain = 'https://www.googletagmanager.com',
  container = 'gtm.js'
} = Astro.props;

// Ensure id is always an array
const gtmIds = Array.isArray(id) ? id : [id];
---

<!-- Data Layer Initialization -->
<script is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
</script>

<!-- Google Tag Manager -->
<script is:inline define:vars={{ gtmIds }}>
  // Load GTM for each container ID
  gtmIds.forEach(function(gtmId) {
    (function(w, d, s, l, i) {
      w[l] = w[l] || [];
      w[l].push({'gtm.start': new Date().getTime(), event: 'gtm.js'});
      var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != 'dataLayer' ? '&l=' + l : '';
      j.async = true;
      j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
      if (f.parentNode) {
        f.parentNode.insertBefore(j, f);
      }
    })(window, document, 'script', 'dataLayer', gtmId);
  });
</script>
