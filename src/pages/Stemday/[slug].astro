// Dynamic route to handle English URLs while using Chinese-named components
export async function getStaticPaths() {
  return [
    { params: { slug: 'straw-bridge' } },
    { params: { slug: 'diy' } },
    { params: { slug: 'matatalab-programming' } }
  ];
}

const { slug } = Astro.params;

// Import the Chinese-named component using a switch statement
let ChineseComponent;
switch (slug) {
  case 'straw-bridge':
    ChineseComponent = await import('./飲管橋.astro');
    break;
  case 'diy':
    ChineseComponent = await import('./DIY 手作.astro');
    break;
  case 'matatalab-programming':
    ChineseComponent = await import('./Matatalab 入門編程課程.astro');
    break;
  default:
    throw new Error(`Unknown slug: ${slug}`);
}
---

<ChineseComponent.default /> 