---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { generateExcerpt } from '../../utils/excerpt';
import { generateTagSlug } from '../../utils/courseMappings';
import RelatedCourses from '../../components/course/RelatedCourses.astro';
import RelatedNews from '../../components/course/RelatedNews.astro';

export async function getStaticPaths() {
  const newsArticles = await getCollection('news');
  
  return newsArticles.map((article) => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

const { article } = Astro.props;
const { Content } = await article.render();

// Generate excerpt from content
const excerpt = article.data.excerpt || generateExcerpt(article.body, 200);

// Get related articles (same category, excluding current)
const allNews = await getCollection('news');
const relatedArticles = allNews
  .filter(a => a.slug !== article.slug && a.data.category === article.data.category)
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 6);

// SEO optimized page data
const pageTitle = `${article.data.title} - 10教育`;
const pageDescription = article.data.description || excerpt;
const pageKeywords = (article.data.tags || []).join(', ');

// Handle OG Image - convert asset path to public URL or use default
let ogImage = "/images/logo_website_700x200-300x86.png"; // Default to logo

if (article.data.SEOImage) {
  if (typeof article.data.SEOImage === 'string') {
    // Convert asset path to public path
    if (article.data.SEOImage.startsWith('../../assets/images/')) {
      // Convert ../../assets/images/news/... to /images/news/...
      ogImage = article.data.SEOImage.replace('../../assets/images/', '/images/');
    } else if (article.data.SEOImage.startsWith('/images/')) {
      // Already a public path
      ogImage = article.data.SEOImage;
    } else {
      // Handle imported asset - this shouldn't happen for strings, but just in case
      ogImage = article.data.SEOImage;
    }
  } else {
    // Handle imported asset object
    ogImage = (article.data.SEOImage as any).src;
  }
} else if (article.data.featuredImage) {
  if (typeof article.data.featuredImage === 'string') {
    // Convert asset path to public path
    if (article.data.featuredImage.startsWith('../../assets/images/')) {
      // Convert ../../assets/images/news/... to /images/news/...
      ogImage = article.data.featuredImage.replace('../../assets/images/', '/images/');
    } else if (article.data.featuredImage.startsWith('/images/')) {
      // Already a public path
      ogImage = article.data.featuredImage;
    } else {
      // Handle imported asset - this shouldn't happen for strings, but just in case
      ogImage = article.data.featuredImage;
    }
  } else {
    // Handle imported asset object
    ogImage = (article.data.featuredImage as any).src;
  }
}

// Article Schema for structured data
const articleSchema: any = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": article.data.title,
  "description": article.data.description || excerpt,
  "author": {
    "@type": "Organization",
    "name": article.data.author || "10教育"
  },
  "publisher": {
    "@type": "Organization",
    "name": "10教育",
    "logo": {
      "@type": "ImageObject",
      "url": "/images/logo_website_700x200-300x86.png"
    }
  },
  "datePublished": article.data.publishDate.toISOString(),
  "dateModified": article.data.publishDate.toISOString(),
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `/news/${article.slug}`
  }
};

// Add image to schema if available
if (ogImage && ogImage !== "/images/logo_website_700x200-300x86.png") {
  articleSchema.image = {
    "@type": "ImageObject",
    "url": ogImage,
    "width": 1200,
    "height": 630
  };
}
---

<Layout
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  ogImage={ogImage}
>
  <!-- Article Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />

  <main class="article-page">
    <!-- Breadcrumb -->
    <nav class="bg-gray-50 py-4">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <ol class="flex items-center space-x-2 text-sm text-gray-600">
            <li><a href="/" class="hover:text-blue-600">首頁</a></li>
            <li><span class="mx-2">/</span></li>
            <li><a href="/news" class="hover:text-blue-600">最新消息</a></li>
            <li><span class="mx-2">/</span></li>
            <li class="text-gray-900 font-medium truncate">{article.data.title}</li>
          </ol>
        </div>
      </div>
    </nav>

    <!-- Article Header -->
    <header class="pt-6 pb-2 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <!-- Category Badge -->
          <div class="mb-4">
            <span class="inline-block bg-blue-100 text-blue-800 text-sm font-medium px-4 py-2 rounded-full">
              {article.data.category}
            </span>
          </div>

          <!-- Title -->
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
            {article.data.title}
          </h1>

          <!-- Meta Information -->
          <div class="flex flex-wrap items-center gap-6 text-gray-600 mb-0">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
              </svg>
              {new Date(article.data.publishDate).toLocaleDateString('zh-HK', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </div>
            
            {article.data.author && (
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                </svg>
                {article.data.author}
              </div>
            )}

            {/* Remove school property check since it's not in the schema */}
          </div>


        </div>
      </div>
    </header>



    <!-- Article Content -->
    <article class="pb-6">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="prose prose-blue max-w-none">
            <Content />
          </div>
        </div>
      </div>
    </article>

    <!-- Tags -->
    {(article.data.tags || []).length > 0 && (
      <section class="py-8 border-t border-gray-200">
        <div class="container mx-auto px-4">
          <div class="max-w-4xl mx-auto">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">相關標籤</h3>
            <div class="flex flex-wrap gap-2">
              {(article.data.tags || []).map((tag) => {
                const tagSlug = generateTagSlug(tag);
                return (
                  <a href={`/tag/${tagSlug}`}
                     class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm hover:bg-gray-200 transition-colors duration-200">
                    {tag}
                  </a>
                );
              })}
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Social Sharing -->
    <section class="py-8 border-t border-gray-200">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">分享文章</h3>
          <div class="flex space-x-4">
            <a 
              href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url.origin}/news/${article.slug}`}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center space-x-2 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
              <span>Facebook</span>
            </a>
            
            <button 
              onclick="navigator.share({title: document.title, url: window.location.href})"
              class="flex items-center space-x-2 bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700 transition-colors"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z" />
              </svg>
              <span>分享</span>
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Related News -->
    <RelatedNews 
      newsTags={article.data.tags || []}
      newsTitle={article.data.title}
      currentNewsSlug={article.slug}
      context="news"
      maxResults={6}
    />

    <!-- Related School Courses -->
    <RelatedCourses 
      newsTags={article.data.tags || []}
      newsTitle={article.data.title}
      context="news"
      maxResults={6}
    />

    <!-- Back to News -->
    <section class="py-8">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <a 
            href="/news"
            class="inline-flex items-center space-x-2 text-blue-600 hover:text-blue-700 font-medium"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            <span>返回最新消息</span>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .aspect-video {
    aspect-ratio: 16 / 9;
  }

  /* Enhance prose styling for article content */
  .prose h2 {
    @apply text-2xl font-bold text-gray-900 mt-8 mb-4;
  }
  
  .prose h3 {
    @apply text-xl font-bold text-gray-900 mt-6 mb-3;
  }
  
  .prose p {
    @apply text-gray-700 leading-relaxed mb-4;
  }
  
  .prose ul, .prose ol {
    @apply pl-6 mb-4;
  }
  
  .prose li {
    @apply mb-2;
  }
  
  .prose strong {
    @apply font-semibold text-gray-900;
  }
  
  .prose a {
    @apply text-blue-600 hover:text-blue-700 underline;
  }
</style> 