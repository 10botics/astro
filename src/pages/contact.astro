---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PaperformEmbed from '../components/PaperformEmbed.astro';

// Default subtitle if none provided
const subtitle = Astro.props.subtitle || "想了解更多資訊？歡迎聯絡我們，我們會為您提供詳細的課程安排和報名資訊。";
console.log("This is a message from an Astro component!");
---

<Layout title="Contact Us - 10botics" description="Get in touch with 10botics for robotics and automation solutions.">
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Contact Us
        </h1>
        <p class="text-xl md:text-2xl text-blue-100">
          Ready to transform your business with robotics?
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="bg-gray-50 py-16">
    <div class="container mx-auto px-4 max-w-6xl">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">聯絡我們</h2>
      <div class="bg-white rounded-lg p-8 shadow-lg">
        <div class="text-center">
          <p class="text-lg text-gray-700 mb-6">{subtitle}</p>
          <PaperformEmbed />
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout> 