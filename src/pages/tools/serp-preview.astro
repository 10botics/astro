---
import Layout from '../../layouts/Layout.astro';
import GoogleSearchParser from '../../components/GoogleSearchParser.astro';

// Get URL parameters for pre-populating the form
const url = Astro.url;
const searchParams = url.searchParams;

const title = searchParams.get('title') || "";
const description = searchParams.get('description') || "";
const imageUrl = searchParams.get('image') || "";
const pageUrl = searchParams.get('url') || "";

const pageTitle = "SERP Preview Tool - SEO Title & Meta Description Tester";
const pageDescription = "Test how your page titles and meta descriptions will appear in Google search results. Real-time preview with character count validation and current SERP analysis.";
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="min-h-screen bg-gray-50 py-12">
    <div class="container mx-auto px-4">
      <!-- Header Section -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          SERP Preview Tool
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Optimize your page titles and meta descriptions for better search engine visibility. 
          See exactly how your content will appear in Google search results and compare with your current SERP performance.
        </p>
      </div>





      <!-- Current SERP Analysis -->
      <div class="mt-16">
        <GoogleSearchParser />
      </div>

      <!-- Information Section -->
      <div class="mt-16 max-w-4xl mx-auto">
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">
            Why Use a SERP Preview Tool?
          </h2>
          
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-lg font-semibold text-gray-800 mb-3">
                üìè Optimize Length
              </h3>
              <p class="text-gray-600 mb-4">
                Ensure your titles and descriptions fit within Google's display limits. 
                Titles should be 50-60 characters, descriptions 150-160 characters.
              </p>
            </div>
            
            <div>
              <h3 class="text-lg font-semibold text-gray-800 mb-3">
                üéØ Improve Click-Through Rates
              </h3>
              <p class="text-gray-600 mb-4">
                Craft compelling titles and descriptions that encourage users to click 
                on your search results over competitors.
              </p>
            </div>
            
            <div>
              <h3 class="text-lg font-semibold text-gray-800 mb-3">
                üñºÔ∏è Featured Images
              </h3>
              <p class="text-gray-600 mb-4">
                See how your featured images will appear in Google search results. 
                Images can significantly improve click-through rates and visual appeal.
              </p>
            </div>
            
            <div>
              <h3 class="text-lg font-semibold text-gray-800 mb-3">
                ‚úÖ Real-Time Validation
              </h3>
              <p class="text-gray-600 mb-4">
                Get instant feedback with character counters and visual warnings 
                when your content exceeds recommended limits.
              </p>
            </div>
            
            <div>
              <h3 class="text-lg font-semibold text-gray-800 mb-3">
                üëÄ Visual Preview
              </h3>
              <p class="text-gray-600 mb-4">
                See exactly how your page will appear in Google search results 
                before publishing your content.
              </p>
            </div>
            
            <div>
              <h3 class="text-lg font-semibold text-gray-800 mb-3">
                üîç Complete SERP Analysis
              </h3>
              <p class="text-gray-600 mb-4">
                Analyze current search results and compare with your optimized 
                content to identify improvement opportunities.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Best Practices Section -->
      <div class="mt-12 max-w-4xl mx-auto">
        <div class="bg-blue-50 rounded-lg border border-blue-200 p-8">
          <h2 class="text-2xl font-bold text-blue-900 mb-6">
            SEO Best Practices
          </h2>
          
          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold text-blue-800 mb-2">
                Page Titles
              </h3>
              <ul class="list-disc list-inside text-blue-700 space-y-1">
                <li>Keep titles between 50-60 characters</li>
                <li>Include your primary keyword near the beginning</li>
                <li>Make it descriptive and compelling</li>
                <li>Avoid keyword stuffing</li>
                <li>Each page should have a unique title</li>
              </ul>
            </div>
            
            <div>
              <h3 class="text-lg font-semibold text-blue-800 mb-2">
                Meta Descriptions
              </h3>
              <ul class="list-disc list-inside text-blue-700 space-y-1">
                <li>Aim for 150-160 characters</li>
                <li>Write compelling copy that encourages clicks</li>
                <li>Include relevant keywords naturally</li>
                <li>Summarize the page content accurately</li>
                <li>Use action-oriented language when appropriate</li>
              </ul>
            </div>
            
            <div>
              <h3 class="text-lg font-semibold text-blue-800 mb-2">
                Featured Images
              </h3>
              <ul class="list-disc list-inside text-blue-700 space-y-1">
                <li>Use high-quality, relevant images (1200x630px recommended)</li>
                <li>Ensure images are properly optimized for web</li>
                <li>Include descriptive alt text for accessibility</li>
                <li>Use Open Graph and Twitter Card meta tags</li>
                <li>Images should represent your content accurately</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Example Images Section -->
      <div class="mt-12 max-w-4xl mx-auto">
        <div class="bg-green-50 rounded-lg border border-green-200 p-8">
          <h2 class="text-2xl font-bold text-green-900 mb-6">
            Test with Example Images
          </h2>
          <p class="text-green-700 mb-4">
            Try these example image URLs to see how featured images appear in Google search results:
          </p>
          <div class="grid md:grid-cols-2 gap-4">
            <div class="bg-white p-4 rounded border">
              <p class="text-sm font-medium text-green-800 mb-2">Nature Image:</p>
              <code class="text-xs text-green-600 break-all">
                https://picsum.photos/1200/630?random=1
              </code>
              <button class="mt-2 w-full bg-green-600 hover:bg-green-700 text-white text-xs py-1 px-2 rounded transition-colors" onclick="testImage('https://picsum.photos/1200/630?random=1')">
                Test This Image
              </button>
            </div>
            <div class="bg-white p-4 rounded border">
              <p class="text-sm font-medium text-green-800 mb-2">Technology Image:</p>
              <code class="text-xs text-green-600 break-all">
                https://picsum.photos/1200/630?random=2
              </code>
              <button class="mt-2 w-full bg-green-600 hover:bg-green-700 text-white text-xs py-1 px-2 rounded transition-colors" onclick="testImage('https://picsum.photos/1200/630?random=2')">
                Test This Image
              </button>
            </div>
            <div class="bg-white p-4 rounded border">
              <p class="text-sm font-medium text-green-800 mb-2">Education Image:</p>
              <code class="text-xs text-green-600 break-all">
                https://picsum.photos/1200/630?random=3
              </code>
              <button class="mt-2 w-full bg-green-600 hover:bg-green-700 text-white text-xs py-1 px-2 rounded transition-colors" onclick="testImage('https://picsum.photos/1200/630?random=3')">
                Test This Image
              </button>
            </div>
            <div class="bg-white p-4 rounded border">
              <p class="text-sm font-medium text-green-800 mb-2">Science Image:</p>
              <code class="text-xs text-green-600 break-all">
                https://picsum.photos/1200/630?random=4
              </code>
              <button class="mt-2 w-full bg-green-600 hover:bg-green-700 text-white text-xs py-1 px-2 rounded transition-colors" onclick="testImage('https://picsum.photos/1200/630?random=4')">
                Test This Image
              </button>
            </div>
            <div class="bg-white p-4 rounded border">
              <p class="text-sm font-medium text-green-800 mb-2">AI & Robotics:</p>
              <code class="text-xs text-green-600 break-all">
                https://picsum.photos/1200/630?random=5
              </code>
              <button class="mt-2 w-full bg-green-600 hover:bg-green-700 text-white text-xs py-1 px-2 rounded transition-colors" onclick="testImage('https://picsum.photos/1200/630?random=5')">
                Test This Image
              </button>
            </div>
            <div class="bg-white p-4 rounded border">
              <p class="text-sm font-medium text-green-800 mb-2">STEM Education:</p>
              <code class="text-xs text-green-600 break-all">
                https://picsum.photos/1200/630?random=6
              </code>
              <button class="mt-2 w-full bg-green-600 hover:bg-green-700 text-white text-xs py-1 px-2 rounded transition-colors" onclick="testImage('https://picsum.photos/1200/630?random=6')">
                Test This Image
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Test Image function for quick testing
  (window as any).testImage = function(imageUrl: string) {
    const imageInput = document.getElementById('serp-image') as HTMLInputElement;
    if (imageInput) {
      imageInput.value = imageUrl;
      imageInput.dispatchEvent(new Event('input'));
    }
  };
</script>

<style>
  .container {
    max-width: 1400px;
  }
</style>
