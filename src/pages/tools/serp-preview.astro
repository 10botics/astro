---
import Layout from '../../layouts/Layout.astro';
import SERPPreview from '../../components/SERPPreview.astro';
import GoogleSearchParser from '../../components/GoogleSearchParser.astro';

// Check if we're in production/deployment mode
const isProduction = import.meta.env.PROD;

// If in production, redirect to home page or show error
if (isProduction) {
  return Astro.redirect('/');
}

// Get URL parameters for pre-populating the form
const url = Astro.url;
const searchParams = url.searchParams;

const title = searchParams.get('title') || "";
const description = searchParams.get('description') || "";
const imageUrl = searchParams.get('image') || "";
const pageUrl = searchParams.get('url') || "";

const pageTitle = "SERP Preview Tool - SEO Title & Meta Description Tester";
const pageDescription = "Test how your page titles and meta descriptions will appear in Google search results. Real-time preview with character count validation and current SERP analysis.";
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="min-h-screen bg-gray-50 py-12">
    <div class="container mx-auto px-4">
      <!-- Header Section -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          SERP Preview Tool
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
          Optimize your page titles and meta descriptions for better search engine visibility. 
          See exactly how your content will appear in Google search results and compare with your current SERP performance.
        </p>
      </div>

      <!-- SERP Preview Component with pre-populated data -->
      <SERPPreview 
        title={title}
        description={description}
        imageUrl={imageUrl}
        url={pageUrl}
      />

      <!-- Quick Load Example Button -->
      <div class="mt-8 text-center">
        <button 
