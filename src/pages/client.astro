<Layout 
  title="客戶及合作機構 - 10教育"
  description="服務超過50間香港中小學及教育機構，包括喇沙書院、英皇書院、香港中文大學等，提供優質STEM教育課程方案五年經驗值得信賴"
>
  <!-- Partners Section -->
  <div class="container mx-auto px-4 py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-800 mb-6">客戶及合作機構</h1>
      <p class="text-xl text-gray-600">10botics致力為每個客戶和機構提供STEM Day活動與校內課程，全力支持您的需求。</p>
    </div>

    <!-- Filter Tabs -->
    <div class="flex justify-center mb-8 space-x-4">
      <button class="filter-btn active px-6 py-3 rounded-full bg-blue-600 text-white font-medium transition-all hover:bg-blue-700" data-filter="all">全部</button>
      <button class="filter-btn px-6 py-3 rounded-full bg-gray-200 text-gray-700 font-medium transition-all hover:bg-gray-300" data-filter="primary">小學</button>
      <button class="filter-btn px-6 py-3 rounded-full bg-gray-200 text-gray-700 font-medium transition-all hover:bg-gray-300" data-filter="secondary">中學/大學</button>
      <button class="filter-btn px-6 py-3 rounded-full bg-gray-200 text-gray-700 font-medium transition-all hover:bg-gray-300" data-filter="institution">教育機構</button>
    </div>

    <!-- Partners Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 gap-4" id="partners-grid">
      <!-- Primary Schools -->
      {primarySchools.map((school) => (
        <div class="partner-item" data-category="primary">
          <div class="bg-white rounded-lg p-4 shadow-md hover:shadow-lg transition-shadow text-center">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <Image 
                src={school.image} 
                alt={school.name}
                class="w-full h-full object-contain rounded-lg"
                width={64}
                height={64}
              />
            </div>
            <p class="text-xs text-gray-600 leading-tight">{school.name}</p>
          </div>
        </div>
      ))}

      <!-- Secondary Schools -->
      {secondarySchools.map((school) => (
        <div class="partner-item" data-category="secondary">
          <div class="bg-white rounded-lg p-4 shadow-md hover:shadow-lg transition-shadow text-center">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <Image 
                src={school.image} 
                alt={school.name}
                class="w-full h-full object-contain rounded-lg"
                width={64}
                height={64}
              />
            </div>
            <p class="text-xs text-gray-600 leading-tight">{school.name}</p>
          </div>
        </div>
      ))}

      <!-- Educational Institutions -->
      {institutions.map((institution) => (
        <div class="partner-item" data-category="institution">
          <div class="bg-white rounded-lg p-4 shadow-md hover:shadow-lg transition-shadow text-center">
            <div class="w-16 h-16 mx-auto mb-3 flex items-center justify-center">
              <Image 
                src={institution.image} 
                alt={institution.name}
                class="w-full h-full object-contain rounded-lg"
                width={64}
                height={64}
              />
            </div>
            <p class="text-xs text-gray-600 leading-tight">{institution.name}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>

<script>
  // Filter functionality for partners
  document.addEventListener('DOMContentLoaded', function() {
    const filterBtns = document.querySelectorAll('.filter-btn') as NodeListOf<HTMLButtonElement>;
    const partnerItems = document.querySelectorAll('.partner-item') as NodeListOf<HTMLElement>;

    filterBtns.forEach(btn => {
      btn.addEventListener('click', (event) => {
        const target = event.currentTarget as HTMLButtonElement;
        
        // Remove active class from all buttons
        filterBtns.forEach(b => b.classList.remove('active', 'bg-blue-600', 'text-white'));
        filterBtns.forEach(b => b.classList.add('bg-gray-200', 'text-gray-700'));
        
        // Add active class to clicked button
        target.classList.remove('bg-gray-200', 'text-gray-700');
        target.classList.add('active', 'bg-blue-600', 'text-white');
        
        const filter = target.getAttribute('data-filter');
        
        partnerItems.forEach(item => {
          if (filter === 'all' || item.getAttribute('data-category') === filter) {
            item.style.display = 'block';
          } else {
            item.style.display = 'none';
          }
        });
      });
    });
  });
</script>

<style>
  .filter-btn.active {
    @apply bg-blue-600 text-white;
  }
  
  .partner-item {
    transition: all 0.3s ease;
  }
  
  .partner-item:hover {
    transform: translateY(-5px);
  }
</style>
