          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {relatedCourses.map((course) => (
            <div class="bg-gray-50 rounded-lg p-6 hover:shadow-lg transition-shadow">
              <h3 class="text-xl font-bold text-gray-800 mb-3">{course.title}</h3>
              <p class="text-gray-600 mb-4">{course.description}</p>
              <a href={course.link} class="text-blue-600 hover:text-blue-800 font-semibold">
