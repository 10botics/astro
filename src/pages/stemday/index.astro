---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import PaperformEmbed from '../../components/PaperformEmbed.astro';
import GalleryCarousel from '../../components/course/GalleryCarousel.astro';

// Import images with error handling
let heroImage,
  codroneExperience,
  aiArtCreation,
  virtualRocketDesign,
  aiDigitalAnimation,
  circuitTesting,
  microbitCar,
  mindControlRacing,
  martyRobot,
  matatalabProgramming,
  arGameExperience,
  vrGameExperience,
  virtualSpaceStation;

// Additional images from original STEM Day HTML content
let classMicrobitMaze,
  classAIArtStory,
  classStrawBridge,
  classMicrobitParachute,
  classScratchGame,
  classKSP,
  classDIY,
  classMatatalab,
  aiLectureImage,
  blockchainIcon,
  galleryImg1,
  galleryImg2,
  galleryImg3,
  galleryImg4,
  galleryImg5,
  galleryImg6,
  galleryImg7,
  galleryImg8,
  galleryImg9,
  // Featured activities
  featuredAIDigitalAnimation,
  featuredTello,
  featuredMinecraft,
  featuredProcreate,
  featuredDonkeyCar,
  featuredDelightex,
  // Course hero images
  heroAIDigital,
  heroTello,
  heroKSP,
  heroDonkey,
  heroMinecraft,
  heroProcreate,
  heroScratch,
  heroRaspberryPi,
  heroMicrobitMaze,
  heroDelightex,
  // News images
  newsHolimLaiStemDay,
  newsTinHongStemDay,
  newsYMCAStemDay;

try {
      heroImage = await import('../../assets/images/stemday/mainpage/hero-image.jpeg');
    codroneExperience = await import('../../assets/images/stemday/mainpage/codrone-experience.png');
    aiArtCreation = await import('../../assets/images/stemday/mainpage/ai-art-creation.jpeg');
    virtualRocketDesign = await import('../../assets/images/stemday/mainpage/virtual-rocket-design.jpg');
    aiDigitalAnimation = await import('../../assets/images/stemday/mainpage/ai-digital-animation.png');
    circuitTesting = await import('../../assets/images/stemday/mainpage/circuit-testing.png');
    microbitCar = await import('../../assets/images/stemday/mainpage/microbit-car.png');
    mindControlRacing = await import('../../assets/images/stemday/mainpage/mind-control-racing.png');
    martyRobot = await import('../../assets/images/stemday/mainpage/marty-robot.png');
    matatalabProgramming = await import('../../assets/images/stemday/mainpage/matatalab-programming.png');
    arGameExperience = await import('../../assets/images/stemday/mainpage/ar-game-experience.png');
    vrGameExperience = await import('../../assets/images/stemday/mainpage/vr-game-experience.png');
    virtualSpaceStation = await import('../../assets/images/stemday/mainpage/virtual-space-station.png');
  
  // Classes (課堂)
      classMicrobitMaze = await import('../../assets/images/stemday/featured-activities/IMG_1726-1024x768.jpg');
    classAIArtStory = await import('../../assets/images/stemday/featured-activities/IMG_0089-1024x768.jpg');
    classStrawBridge = await import('../../assets/images/stemday/past-activities/20230718_024242873_iOS-1024x768.jpg');
    classMicrobitParachute = await import('../../assets/images/stemday/past-activities/Screenshot-2024-08-16-181803.png');
    classScratchGame = await import('../../assets/images/stemday/classroom-activities/Scratch-遊戲設計-768x701.png');
    classKSP = await import('../../assets/images/stemday/past-activities/WhatsApp-Image-2023-07-05-at-14.18.132-1024x768.jpeg');
    classDIY = await import('../../assets/images/stemday/featured-activities/IMG_3708-scaled-e1720172148276-1024x780.jpg');
    classMatatalab = await import('../../assets/images/stemday/Matatalab 入門編程課程/home-set-buy-now_1-1.png');
    classScratchGame = await import('../../assets/images/stemday/classroom-activities/WhatsApp-Image-2023-03-06-at-16.40.556.jpeg');

  // Lectures (講座)
      aiLectureImage = await import('../../assets/images/stemday/past-activities/Screenshot-2023-10-13-174241.png');
    blockchainIcon = await import('../../assets/images/stemday/featured-activities/112-e1696583914904.png');

  // Gallery (活動花絮)
      galleryImg1 = await import('../../assets/images/stemday/featured-activities/IMG_0089-1024x768.jpg');
    galleryImg2 = await import('../../assets/images/stemday/featured-activities/LKN_2476-Enhanced-NR-1-1024x768.jpg');
    galleryImg3 = await import('../../assets/images/stemday/featured-activities/IMG_9985-1024x768.jpeg');
    galleryImg4 = await import('../../assets/images/stemday/past-activities/IMG_1979-scaled.jpg');
    galleryImg5 = await import('../../assets/images/stemday/past-activities/IMG_3821-scaled.jpg');
    galleryImg6 = await import('../../assets/images/stemday/past-activities/Screenshot-2024-08-02-181239-1024x768.png');
    galleryImg7 = await import('../../assets/images/stemday/past-activities/Screenshot-2024-08-02-103220-1024x768.png');
    galleryImg8 = await import('../../assets/images/stemday/past-activities/Screenshot-2024-08-02-105604-1024x768.png');
    galleryImg9 = await import('../../assets/images/stemday/past-activities/Screenshot-2024-08-02-105923-3-1024x768.png');
  
  // Featured activities
  featuredAIDigitalAnimation = await import('../../assets/images/school-courses/AI數碼動畫展/ai-image-generation.png');
  featuredTello = await import('../../assets/images/school-courses/Tello 無人機課程/tello-main-image.jpg');
  featuredMinecraft = await import('../../assets/images/school-courses/Minecraft校園創建課程/featured-image.png');
  featuredProcreate = await import('../../assets/images/school-courses/Procreate數位藝術課程/procreate-course-image.webp');
  featuredDonkeyCar = await import('../../assets/images/news/2021-12-09-donkey-car-x學與教博覽2021/image8.jpg');
  featuredDelightex = await import('../../assets/images/school-courses/Delightex 遊戲設計課程/admin-ajax-min.png');

  // Load course hero images to use in featured activities
  try {
    const AIDigitalModule = await import('../school-courses/AI數碼動畫展.astro');
    heroAIDigital = AIDigitalModule?.courseData?.heroImage;
  } catch {}
  try {
    const TelloModule = await import('../school-courses/Tello 無人機課程.astro');
    heroTello = TelloModule?.courseData?.heroImage || TelloModule?.courseData?.featuredImage;
  } catch {}
  try {
    const KSPModule = await import('../school-courses/ksp太空計劃課程.astro');
    heroKSP = KSPModule?.courseData?.heroImage;
  } catch {}
  try {
    const DonkeyModule = await import('../school-courses/Donkey Car 無人車課程.astro');
    heroDonkey = DonkeyModule?.courseData?.heroImage;
  } catch {}
  try {
    const MinecraftModule = await import('../school-courses/Minecraft校園創建課程.astro');
    heroMinecraft = MinecraftModule?.courseData?.heroImage || MinecraftModule?.courseData?.featuredImage;
  } catch {}
  try {
    const ProcreateModule = await import('../school-courses/Procreate數位藝術課程.astro');
    heroProcreate = ProcreateModule?.courseData?.heroImage;
  } catch {}
  try {
    const ScratchModule = await import('../school-courses/Scratch遊戲設計課程.astro');
    heroScratch = ScratchModule?.courseData?.heroImage;
  } catch {}
  try {
    const RaspberryModule = await import('../school-courses/raspberry-pi編程課程.astro');
    heroRaspberryPi = RaspberryModule?.courseData?.heroImage;
  } catch {}
  try {
    const MicrobitModule = await import('../school-courses/Microbit 逃出迷宮.astro');
    heroMicrobitMaze = MicrobitModule?.courseData?.heroImage;
  } catch {}
  try {
    const DelightexModule = await import('../school-courses/Delightex 遊戲設計課程.astro');
    heroDelightex = DelightexModule?.courseData?.heroImage;
  } catch {}

  // News images
  newsHolimLaiStemDay = await import('../../assets/images/news/2025-07-19-可立中學ai藝術創作stem-day精彩回顧/featured.jpg');
  newsTinHongStemDay = await import('../../assets/images/news/2024-07-10-深度探索Delightex-vrampar浸信會天虹小學-stem-day/image1.png');
  newsYMCAStemDay = await import('../../assets/images/news/2024-07-05-ai科技與創意融合中華基督教青年會中學-stem-day/image1.jpeg');
} catch (error) {
  console.warn('Some images could not be loaded:', error);
}
---

<Layout 
  title="STEM Day活動 - 10教育"
  description="STEM Day全力支援學校籌辦，提供AI藝術創作、飲管橋、Microbit編程、Scratch遊戲設計等多元活動，讓學生深入認識STEM拓闊視野"
>
  <main>
    <!-- Hero Section -->
    <section class="relative h-[60vh] min-h-[400px] overflow-hidden">
      <div class="relative w-full h-full">
        {heroImage && <Image src={heroImage.default} alt="STEM Day Hero" class="w-full h-full object-cover" />}
        <div class="hero-overlay">
          <div class="container-standard text-center text-white">
            <h1 class="text-5xl md:text-6xl font-bold mb-4">STEM Day</h1>
            <h2 class="text-xl md:text-2xl max-w-3xl mx-auto leading-relaxed mb-8">全力支援學校籌辦STEM day，讓學生對STEM有更加深入的認識，曠闊學生視野。​</h2>
            <div class="mt-8">
              <a 
                href="https://drive.google.com/file/d/17N6B3aMMZQNS-G868shRYo_gO-MJ0qPO/view?usp=sharing" 
                target="_blank" 
                rel="noopener noreferrer"
                class="btn-primary btn-gradient shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                下載STEM Day活動簡介
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
      <!-- Video Section -->
      <section class="section-padding bg-gray-50">
        <div class="container-standard">
          <div class="max-w-4xl mx-auto aspect-video">
            <iframe 
              width="100%" 
              height="100%" 
              src="https://www.youtube.com/embed/qs5OeXSTzsY" 
              title="STEM Day Video"
              frameborder="0" 
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
              allowfullscreen
              class="w-full h-full rounded-lg shadow-lg">
            </iframe>
          </div>
        </div>
      </section>
  
      <!-- Booths Section -->
      <section class="section-padding bg-gray-50">
        <div class="container-standard">
          <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-8">攤位</h2>
          <p class="text-center text-lg md:text-xl text-gray-600 mb-12 max-w-3xl mx-auto">10Botics 提供以攤位的形式進行活動，例如過往爲不同學校舉行一日的STEM Day，為學生提供不同的攤位遊戲，當中包括：</p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="card-base card-hover">
              <a href="school-courses/codrone/" target="_blank" rel="noopener">
                {codroneExperience && <Image src={codroneExperience.default} alt="CoDrone無人機體驗" class="w-full h-48 object-cover" />}
              </a>
              <h3 class="p-4 text-center text-lg font-semibold"><a href="school-courses/codrone/" target="_blank" rel="noopener" class="text-gray-900 hover:text-cyan-600 hover:underline">CoDrone無人機體驗</a></h3>
            </div>
            <div class="card-base card-hover">
              <a href="school-courses/ai-enrichment-course/" target="_blank" rel="noopener">
                {aiArtCreation && <Image src={aiArtCreation.default} alt="AI藝術創作" class="w-full h-48 object-cover" />}
              </a>
              <h3 class="p-4 text-center text-lg font-semibold"><a href="school-courses/ai-enrichment-course/" target="_blank" rel="noopener" class="text-gray-900 hover:text-cyan-600 hover:underline">AI藝術創作</a></h3>
            </div>
            <div class="card-base card-hover">
              {virtualRocketDesign && <Image src={virtualRocketDesign.default} alt="虛擬火箭設計" class="w-full h-48 object-cover" />}
              <h3 class="p-4 text-center text-lg font-semibold text-gray-900">虛擬火箭設計</h3>
            </div>
            <div class="card-base card-hover">
              <a href="school-courses/ai-digital-animation-exhibition/" target="_blank" rel="noopener">
                {aiDigitalAnimation && <Image src={aiDigitalAnimation.default} alt="AI數碼動畫展" class="w-full h-48 object-cover" />}
              </a>
              <h3 class="p-4 text-center text-lg font-semibold"><a href="school-courses/ai-digital-animation-exhibition/" target="_blank" rel="noopener" class="text-gray-900 hover:text-cyan-600 hover:underline">AI數碼動畫展</a></h3>
            </div>
            <div class="card-base card-hover">
              {martyRobot && <Image src={martyRobot.default} alt="Marty 機械人編程體驗" class="w-full h-48 object-cover" />}
              <h3 class="p-4 text-center text-lg font-semibold text-gray-900">Marty 機械人編程體驗</h3>
            </div>
            <div class="card-base card-hover">
              {matatalabProgramming && <Image src={matatalabProgramming.default} alt="Matatalab編程體驗" class="w-full h-48 object-cover" />}
              <h3 class="p-4 text-center text-lg font-semibold text-gray-900">Matatalab編程體驗</h3>
            </div>
            <div class="card-base card-hover">
              {arGameExperience && <Image src={arGameExperience.default} alt="AR遊戲體驗" class="w-full h-48 object-cover" />}
              <h3 class="p-4 text-center text-lg font-semibold text-gray-900">AR遊戲體驗</h3>
            </div>
            <div class="card-base card-hover">
              {vrGameExperience && <Image src={vrGameExperience.default} alt="VR遊戲體驗" class="w-full h-48 object-cover" />}
              <h3 class="p-4 text-center text-lg font-semibold text-gray-900">VR遊戲體驗</h3>
            </div>
            <div class="card-base card-hover">
              {virtualSpaceStation && <Image src={virtualSpaceStation.default} alt="虛擬太空站接駁" class="w-full h-48 object-cover" />}
              <h3 class="p-4 text-center text-lg font-semibold text-gray-900">虛擬太空站接駁</h3>
            </div>
          </div>
        </div>
      </section>

    <!-- Classes Section (課堂) -->
    <section class="section-padding bg-white">
        <div class="container-standard">
          <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-8">課堂</h2>
          <p class="text-center text-lg md:text-xl text-gray-600 mb-12 max-w-3xl mx-auto">10Botics亦爲STEM Day提供以課室的形式進行，透過分班的方式進行課室活動，當中包括：</p>
  
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="card-base card-hover">
              <a href="school-courses/ai-enrichment-course/" target="_blank" rel="noopener">
                {classAIArtStory && <Image src={classAIArtStory.default} alt="AI藝術故事創作" class="w-full h-48 object-cover" />}
              </a>
              <h3 class="p-4 text-center text-lg font-semibold"><a href="school-courses/ai-enrichment-course/" target="_blank" rel="noopener" class="text-gray-900 hover:text-cyan-600 hover:underline">AI藝術故事創作</a></h3>
            </div>
            <div class="card-base card-hover">
              <a href="stemday/straw-bridge/" target="_blank" rel="noopener">
                {classStrawBridge && <Image src={classStrawBridge.default} alt="飲管橋" class="w-full h-48 object-cover" />}
              </a>
              <h3 class="p-4 text-center text-lg font-semibold"><a href="stemday/straw-bridge/" target="_blank" rel="noopener" class="text-gray-900 hover:text-cyan-600 hover:underline">飲管橋</a></h3>
            </div>
            <div class="card-base card-hover">
              <a href="school-courses/microbit-parachute/" target="_blank" rel="noopener">
                {classMicrobitParachute && <Image src={classMicrobitParachute.default} alt="Micro:bit 降落傘" class="w-full h-48 object-cover" />}
              </a>
              <h3 class="p-4 text-center text-lg font-semibold"><a href="school-courses/microbit-parachute/" target="_blank" rel="noopener" class="text-gray-900 hover:text-cyan-600 hover:underline">Micro:bit 降落傘</a></h3>
            </div>
            <div class="card-base card-hover">
              <a href="school-courses/scratch-game-design/" target="_blank" rel="noopener">
                {classScratchGame && <Image src={classScratchGame.default} alt="Scratch 遊戲設計" class="w-full h-48 object-cover" />}
              </a>
              <h3 class="p-4 text-center text-lg font-semibold"><a href="school-courses/scratch-game-design/" target="_blank" rel="noopener" class="text-gray-900 hover:text-cyan-600 hover:underline">Scratch 遊戲設計</a></h3>
            </div>
            <div class="card-base card-hover">
              <a href="school-courses/ksp/" target="_blank" rel="noopener">
                {classKSP && <Image src={classKSP.default} alt="KSP太空遊戲設計" class="w-full h-48 object-cover" />}
              </a>
              <h3 class="p-4 text-center text-lg font-semibold"><a href="school-courses/ksp/" target="_blank" rel="noopener" class="text-gray-900 hover:text-cyan-600 hover:underline">KSP太空遊戲設計</a></h3>
            </div>
            <div class="card-base card-hover">
              <a href="/science" target="_blank" rel="noopener">
                {classDIY && <Image src={classDIY.default} alt="DIY手作" class="w-full h-48 object-cover" />}
              </a>
              <h3 class="p-4 text-center text-lg font-semibold"><a href="/science" target="_blank" rel="noopener" class="text-gray-900 hover:text-cyan-600 hover:underline">DIY手作</a></h3>
            </div>
            <div class="card-base card-hover">
              <a href="stemday/matatalab-入門編程課程/" target="_blank" rel="noopener">
                {classMatatalab && <Image src={classMatatalab.default} alt="Matatalab 入門編程課程" class="w-full h-48 object-cover" />}
              </a>
              <h3 class="p-4 text-center text-lg font-semibold"><a href="stemday/matatalab-入門編程課程/" target="_blank" rel="noopener" class="text-gray-900 hover:text-cyan-600 hover:underline">Matatalab 入門編程課程</a></h3>
            </div>
          </div>
        </div>
      </section>
  
      <!-- Lectures Section (講座) -->
      <section class="section-padding bg-gray-50">
        <div class="container-standard">
          <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-8">講座</h2>
          <p class="text-center text-lg md:text-xl text-gray-600 mb-12 max-w-3xl mx-auto">10Botics也爲STEM Day提供以禮堂講座的方式進行，當中包括：</p>
  
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center mb-12">
            <div class="order-2 lg:order-1">
              {aiLectureImage && <Image src={aiLectureImage.default} alt="AI 人工智能講座" class="w-full h-auto rounded-lg shadow-card" />}
            </div>
            <div class="order-1 lg:order-2">
              <h3 class="text-2xl font-semibold text-gray-900 mb-4">AI 人工智能講座</h3>
              <p class="text-gray-700 mb-4 leading-relaxed">講座將深入介紹人工智能是什麽，並解釋圖靈測試，講解AI 藝術創作、對話機器人等，讓學生全面瞭解最新的人工智能發展。</p>
              <ul class="space-y-2 text-gray-700 list-disc pl-5">
                <li>認識人工智能</li>
                <li>AI藝術創作：圖像生成、主題、設計風格與時間框架</li>
                <li>什麽是圖靈測試</li>
                <li>ChatGPT：原理與日常應用</li>
                <li>AI 最新發展與無人車</li>
              </ul>
            </div>
          </div>
  
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <div>
              {blockchainIcon && <Image src={blockchainIcon.default} alt="區塊鏈專題講座" class="w-full h-auto rounded-lg shadow-card" />}
            </div>
            <div>
              <h3 class="text-2xl font-semibold text-gray-900 mb-4">區塊鏈專題講座</h3>
              <p class="text-gray-700 mb-4 leading-relaxed">由行業導師主講，講解區塊鏈基礎、加密貨幣、NFT 等熱門主題，幫助同學理解區塊鏈技術的實際價值與應用。</p>
              <ul class="space-y-2 text-gray-700 list-disc pl-5">
                <li>認識區塊鏈基礎</li>
                <li>開放源代碼與重要性</li>
                <li>NFT 和數位資產</li>
                <li>加密錢包與安全</li>
              </ul>
            </div>
          </div>
        </div>
      </section>
  
     
  
  
    <!-- Gallery Section (活動花絮) -->
    <section class="section-padding bg-white">
      <div class="container-standard">
        <GalleryCarousel
          title="活動花絮"
          images={[
            galleryImg1?.default,
            galleryImg2?.default,
            galleryImg3?.default,
            galleryImg4?.default,
            galleryImg6?.default,
            galleryImg7?.default,
            galleryImg8?.default,
            galleryImg9?.default,
          ].filter(Boolean) as (string | ImageMetadata)[]}
          intervalMs={4500}
        />
      </div>
    </section>
    <section class="section-padding bg-gray-50">
        <div class="container-standard">
            <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-12">精選體驗活動</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              <div class="card-base card-hover">
                <a href="/school-courses/ai-digital-animation-exhibition" target="_blank" rel="noopener">
            { (heroAIDigital || featuredAIDigitalAnimation) && (
              <Image src={(heroAIDigital as any) ?? (featuredAIDigitalAnimation && featuredAIDigitalAnimation.default)} alt="AI數碼動畫展" class="w-full h-48 object-cover" />
