    const TelloModule = await import('../school-courses/Tello 無人機課程.astro');
    heroTello = TelloModule?.courseData?.heroImage || TelloModule?.courseData?.featuredImage;
  } catch {}
  try {
    const KSPModule = await import('../school-courses/ksp太空計劃課程.astro');
    heroKSP = KSPModule?.courseData?.heroImage;
  } catch {}
  try {
    const DonkeyModule = await import('../school-courses/Donkey Car 無人車課程.astro');
    heroDonkey = DonkeyModule?.courseData?.heroImage;
  } catch {}
  try {
    const MinecraftModule = await import('../school-courses/Minecraft校園創建課程.astro');
    heroMinecraft = MinecraftModule?.courseData?.heroImage || MinecraftModule?.courseData?.featuredImage;
  } catch {}
  try {
    const ProcreateModule = await import('../school-courses/Procreate數位藝術課程.astro');
    heroProcreate = ProcreateModule?.courseData?.heroImage;
