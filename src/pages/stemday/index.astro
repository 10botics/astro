    heroScratch = ScratchModule?.courseData?.heroImage;
  } catch {}
  try {
    const RaspberryModule = await import('../school-courses/raspberry-pi編程課程.astro');
    heroRaspberryPi = RaspberryModule?.courseData?.heroImage;
  } catch {}
  try {
    const MicrobitModule = await import('../school-courses/Microbit 逃出迷宮.astro');
    heroMicrobitMaze = MicrobitModule?.courseData?.heroImage;
  } catch {}
  try {
    const DelightexModule = await import('../school-courses/Delightex 遊戲設計課程.astro');
    heroDelightex = DelightexModule?.courseData?.heroImage;
  } catch {}
} catch (error) {
  console.warn('Some images could not be loaded:', error);
}
---

<Layout title="STEM Day - 10教育">
  <main>
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-background">
        {heroImage && <Image src={heroImage.default} alt="STEM Day Hero" class="hero-image" />}
        <div class="hero-overlay">
          <div class="container">
            <h1 class="hero-title">STEM Day</h1>
            <h2 class="hero-subtitle">全力支援學校籌辦STEM day，讓學生對STEM有更加深入的認識，曠闊學生視野。​</h2>
          </div>
        </div>
      </div>
    </section>
      <!-- Video Section -->
      <section class="video-section">
        <div class="container">
          <div class="video-container">
            <iframe 
              width="100%" 
              height="400" 
              src="https://www.youtube.com/embed/qs5OeXSTzsY" 
              title="STEM Day Video"
              frameborder="0" 
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
              allowfullscreen>
            </iframe>
          </div>
        </div>
      </section>
  
      <!-- Booths Section -->
      <section class="booths-section">
        <div class="container">
          <h2 class="section-title">攤位</h2>
          <p class="section-description">10Botics 提供以攤位的形式進行活動，例如過往爲不同學校舉行一日的STEM Day，為學生提供不同的攤位遊戲，當中包括：</p>
          
          <div class="booths-grid">
            <div class="booth-card">
              {codroneExperience && <Image src={codroneExperience.default} alt="CoDrone無人機體驗" class="booth-image" />}
              <h3><a href="school-courses/codrone/" target="_blank" rel="noopener" style="color:red;">CoDrone無人機體驗</a></h3>
            </div>
            <div class="booth-card">
              {aiArtCreation && <Image src={aiArtCreation.default} alt="AI藝術創作" class="booth-image" />}
              <h3><a href="school-courses/ai-enrichment-course/" target="_blank" rel="noopener" style="color:red;">AI藝術創作</a></h3>
            </div>
            <div class="booth-card">
              {virtualRocketDesign && <Image src={virtualRocketDesign.default} alt="虛擬火箭設計" class="booth-image" />}
              <h3>虛擬火箭設計</h3>
            </div>
            <div class="booth-card">
              {aiDigitalAnimation && <Image src={aiDigitalAnimation.default} alt="AI數碼動畫展" class="booth-image" />}
              <h3><a href="school-courses/ai-digital-animation-exhibition/" target="_blank" rel="noopener" style="color:red;">AI數碼動畫展</a></h3>
            </div>
            <div class="booth-card">
              {circuitTesting && <Image src={circuitTesting.default} alt="電路接駁測試" class="booth-image" />}
              <h3>電路接駁測試</h3>
            </div>
            <div class="booth-card">
              {microbitCar && <Image src={microbitCar.default} alt="Micro:bit遙控車體驗" class="booth-image" />}
              <h3><a href="school-courses/microbit-maze/" target="_blank" rel="noopener" style="color:red;">Micro:bit遙控車體驗</a></h3>
            </div>
            <div class="booth-card">
              {mindControlRacing && <Image src={mindControlRacing.default} alt="念力賽車" class="booth-image" />}
              <h3>念力賽車</h3>
            </div>
            <div class="booth-card">
              {martyRobot && <Image src={martyRobot.default} alt="Marty 機械人編程體驗" class="booth-image" />}
              <h3>Marty 機械人編程體驗</h3>
            </div>
            <div class="booth-card">
              {matatalabProgramming && <Image src={matatalabProgramming.default} alt="Matatalab編程體驗" class="booth-image" />}
              <h3>Matatalab編程體驗</h3>
            </div>
            <div class="booth-card">
              {arGameExperience && <Image src={arGameExperience.default} alt="AR遊戲體驗" class="booth-image" />}
              <h3>AR遊戲體驗</h3>
