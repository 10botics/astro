---
import Layout from '../../layouts/Layout.astro';
import HeroSection from '../../components/course/HeroSection.astro';
import QnASection from '../../components/course/QnASection.astro';
import PaperformEmbed from '../../components/PaperformEmbed.astro';
import SingleCourseContent from '../../components/course/SingleCourseContent.astro';
import { Image } from 'astro:assets';
import ContactSection from '../../components/ContactSection.astro';
// Import images
import heroImage from '../../assets/images/stemday/Matatalab 入門編程課程/home-set-buy-now_1-1.png';
import activityImage from '../../assets/images/stemday/Matatalab 入門編程課程/Screenshot-2023-08-07-122249.png';
import gallery1 from '../../assets/images/stemday/Matatalab 入門編程課程/20230704_104823-1.jpg';
import gallery2 from '../../assets/images/stemday/Matatalab 入門編程課程/20230704_090212-1-scaled.jpg';
import gallery3 from '../../assets/images/stemday/Matatalab 入門編程課程/IMG_0596.png';
import gallery4 from '../../assets/images/stemday/Matatalab 入門編程課程/20230704_102346-scaled.jpg';
import gallery5 from '../../assets/images/stemday/Matatalab 入門編程課程/20230704_104901-scaled.jpg';
import gallery6 from '../../assets/images/stemday/Matatalab 入門編程課程/IMG_0589.png';

// Activity data
const activityData: {
  title: string;
  subtitle: string;
  tags: string[];
  videoId: string;
  description: string;
  heroImageAsset: any;
} = {
  title: "Matatalab編程STEM活動",
  subtitle: "學習使用實體編程模塊來編寫機器人簡單的指令，探索不同的編程概念。",
  tags: ["Block Coding 方塊編程", "Matatalab", "Programming 編程", "初小"],
  videoId: "0_xPiDLkDFc",
  description: "Matatalab入門編程STEM Day活動，容易上手物理編程模塊設計，學生簡單易操作互動性高環境學習初步編程知識概念，操作機器人體驗編程樂趣協作分享解決問題",
  heroImageAsset: heroImage
};

// Activity features
const activityFeatures = [
  {
    icon: "fas fa-robot",
    title: "實踐學習",
    description: "學生操作編程模塊創建程序，並通過機器人的運動、聲音和燈光看到他們的代碼變得生動起來。"
  },
  {
    icon: "fas fa-pencil-alt",
    title: "跨學科學習",
    description: "不僅涉及編程，還融入了數學、科學、藝術和音樂等多個學科的元素。它提供一個全面的學習體驗，培養創造力和跨學科連接。"
  },
  {
    icon: "fas fa-code",
    title: "最佳編程基礎入門",
    description: "使用簡單直觀的界面，讓即使是零編程經驗的同學也能夠輕鬆地理解和操作，無需閱讀或寫作能力。"
  },
  {
    icon: "fas fa-mobile-alt",
    title: "無螢幕編程",
    description: "與許多其他編程平台不同，Matatalab不依賴於螢幕或設備。物理編程模塊提供觸摸感和無螢幕編程體驗，促進創造力、想像力和實體參與。"
  }
];

// Activity schedule
const activitySchedule = [
  {
    title: "遊走地圖",
    content: [
      "使用方向編程方塊完成初階任務",
      "配合數字方塊，減少編程方塊的使用",
      "使用循環方塊",
      "減少編程方塊的使用"
    ]
  },
  {
    title: "畫圖",
    content: [
      "以 MatataBot 配合紙筆畫出數字"
    ]
  }
];

// FAQ data
const faqData = [
  {
    question: "學生需要有編程背景嗎?",
    answer: "無需。課程一般適合任何初小學生。"
  },
  {
    question: "學校需要甚麼設備？",
    answer: "學校無需準備設備。我們會提供設備 Matatalab: Home Edition，每組一份，不多於6人一組。"
  },
  {
    question: "課程有人數限制嗎？",
    answer: "最多 3 班同時進行，每班最多容納 30 人。"
  }
];

// Gallery images
const galleryImages = [
  gallery1,
  gallery2,
  gallery3,
  gallery4,
  gallery5,
  gallery6
];

const duration = "1 至 3 小時";
---

<Layout title={activityData.title} description={activityData.description}>
  <main>
    <!-- Hero Section -->
    <HeroSection 
      title={activityData.title}
      subtitle={activityData.subtitle}
      tags={activityData.tags}
      videoId={activityData.videoId}
      description={activityData.description}
      heroImage={activityData.heroImageAsset}
    />

    <!-- Why Learn Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">為甚麼學 Matatalab?</h2>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {activityFeatures.map((feature) => (
            <div class="bg-white p-6 rounded-lg shadow-md">
              <div class="text-center mb-4">
                <i class={`${feature.icon} text-4xl text-blue-600`}></i>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3 text-center">{feature.title}</h3>
              <p class="text-gray-600 text-center">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Activity Content -->
    <section class="py-16">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">活動內容</h2>
          <p class="text-xl text-gray-600">{duration}</p>
        </div>

        <!-- Video Section -->
        <div class="mb-12">
          <div class="aspect-video bg-gray-200 rounded-lg overflow-hidden">
            <iframe 
              class="w-full h-full"
              src="https://www.youtube.com/embed/sqIj87mtsX8" 
              title="Matatalab Activity Video"
              frameborder="0" 
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
              allowfullscreen>
            </iframe>
          </div>
        </div>

        <!-- Activity Image -->
        <div class="mb-12 text-center">
          <Image 
            src={activityImage} 
            alt="playing Matatalab" 
            class="rounded-lg shadow-lg max-w-2xl mx-auto"
          />
        </div>

        <!-- Activity Schedule -->
        <div class="grid md:grid-cols-2 gap-8">
          {activitySchedule.map((schedule) => (
            <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-blue-600">
              <h3 class="text-xl font-semibold text-gray-900 mb-4 text-center">{schedule.title}</h3>
              <ul class="space-y-2 text-center">
                {schedule.content.map((item) => (
                  <li class="text-gray-600 flex items-center justify-center">
                    <i class="fas fa-greater-than text-blue-600 mr-2 flex-shrink-0"></i>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>

        <div class="text-center mt-8">
          <p class="text-gray-600">歡迎填妥下方表格讓同事為你提供咨詢。</p>
        </div>
      </div>
    </section>

    <!-- Gallery Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">精選照片</h2>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {galleryImages.map((image, index) => (
            <div class="group relative overflow-hidden rounded-lg shadow-lg">
              <Image 
                src={image} 
                alt={`Matatalab activity ${index + 1}`}
                class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-105"
              />
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <QnASection faqs={faqData} />

    <!-- Contact Section -->
    <ContactSection />

    <!-- Related Courses -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">其他課程</h2>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Related course cards would go here -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">AI藝術創作課程</h3>
              <p class="text-gray-600 mb-4">課程將引導學生深入探索人工智能（AI）在視覺藝術領</p>
              <a href="/school-courses/ai-enrichment-course/" class="text-blue-600 hover:text-blue-800 font-medium">
                了解更多 »
              </a>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">AI數碼動畫展</h3>
              <p class="text-gray-600 mb-4">AI數碼動畫展是一個簡單有趣的 STEM Day 活動，學生可按主題設計喜歡的圖案/角色，通過人工智能把圖案轉換成栩栩如生的動畫。</p>
              <a href="/stem-day/ai-digital-animation-exhibition/" class="text-blue-600 hover:text-blue-800 font-medium">
                了解更多 »
              </a>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Blockchain 區塊鏈課程</h3>
              <p class="text-gray-600 mb-4">本課程旨在引領學生進入Web3.0的世界，瞭解在w</p>
              <a href="/school-courses/blockchain/" class="text-blue-600 hover:text-blue-800 font-medium">
                了解更多 »
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout> 