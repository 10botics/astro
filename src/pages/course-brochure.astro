---
import Layout from '../layouts/Layout.astro';
import PaperformEmbed from '../components/PaperformEmbed.astro';

const title = "索取課程總覽 | 10教育";
const description = "填寫表格以索取我們的完整課程總覽，了解10教育提供的各種STEM及AI課程詳情。";
const keywords = "課程總覽, 課程資料, STEM課程, AI課程, 10教育, 索取資料";
---

<Layout 
  title={title}
  description={description}
  keywords={keywords}
>
  <!-- Form Section with proper spacing -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 max-w-4xl">
      <div class="bg-white rounded-2xl shadow-xl p-8 md:p-12">
        
        <PaperformEmbed formId="or0uzdua" />
        
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Custom styles for the course brochure page */
  .hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }
  
  /* Smooth animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .container > div {
    animation: fadeInUp 0.6s ease-out;
  }
</style>
