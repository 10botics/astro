import overallChampion1 from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-16.png';
import overallChampion2 from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-17.png';
import overallChampion3 from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-18.png';

// Organizer logos
import siteLogo from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-19.png';
import hkmuLogo from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-20.png';
import computerEduLogo from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-21.png';

// Buildathon product images from 10botics.com
import buildathonProduct1 from '../assets/images/competition/Minecraft 校園創建計劃 2021/buildathon-product-1.png';
import buildathonProduct2 from '../assets/images/competition/Minecraft 校園創建計劃 2021/buildathon-product-2.png';
import buildathonProduct3 from '../assets/images/competition/Minecraft 校園創建計劃 2021/buildathon-product-3.png';
import buildathonProduct4 from '../assets/images/competition/Minecraft 校園創建計劃 2021/buildathon-product-4.png';
import buildathonProduct5 from '../assets/images/competition/Minecraft 校園創建計劃 2021/buildathon-product-5.png';
import buildathonProduct6 from '../assets/images/competition/Minecraft 校園創建計劃 2021/buildathon-product-6.png';
import buildathonProduct7 from '../assets/images/competition/Minecraft 校園創建計劃 2021/buildathon-product-7.png';
import buildathonProduct8 from '../assets/images/competition/Minecraft 校園創建計劃 2021/buildathon-product-8.png';
import buildathonProduct9 from '../assets/images/competition/Minecraft 校園創建計劃 2021/buildathon-product-9.png';
import buildathonProduct10 from '../assets/images/competition/Minecraft 校園創建計劃 2021/buildathon-product-10.png';
import buildathonProduct11 from '../assets/images/competition/Minecraft 校園創建計劃 2021/buildathon-product-11.png';
import buildathonProduct12 from '../assets/images/competition/Minecraft 校園創建計劃 2021/buildathon-product-12.png';

const title = "Minecraft 校園創建計劃 2021";
const description = "Minecraft 校園創建計劃 2021 更多課程內容 課程回顧 究竟同學係呢個course做過啲咩呢？";
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-600 to-purple-700 text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-5xl font-bold mb-4">Minecraft<br>校園創建計劃</h1>
      <h2 class="text-4xl font-bold mb-8">2021</h2>
      <a href="#" class="bg-white text-blue-600 px-8 py-3 rounded-full font-semibold hover:bg-gray-100 transition-colors">
        更多課程內容
      </a>
    </div>
  </section>

  <!-- Main Hero Image -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <Image 
          src={mainHero} 
          alt="Minecraft 校園創建計劃 2021" 
          class="w-full rounded-lg shadow-lg"
        />
      </div>
    </div>
  </section>

  <!-- Course Review Section -->
  <section class="bg-gray-50 py-20">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold mb-8">課程回顧</h2>
      <p class="text-xl mb-12">究竟同學係呢個course做過啲咩呢？</p>
      <div class="max-w-4xl mx-auto">
        <Image 
          src={minecraftMap} 
          alt="Minecraft 2021 Map" 
          class="w-full rounded-lg shadow-lg"
        />
      </div>
    </div>
  </section>

  <!-- Course Highlights Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-8">課程重點</h2>
      <h3 class="text-2xl font-semibold text-center mb-16">學生喺每個階段都學到好多嘢架！</h3>
      
      <!-- Tabs -->
      <div class="max-w-4xl mx-auto">
        <div class="flex flex-wrap justify-center mb-8">
          <button class="tab-button active px-6 py-3 bg-blue-600 text-white rounded-t-lg mx-1 transition-all duration-200" data-tab="1">
            面授課堂
          </button>
          <button class="tab-button px-6 py-3 bg-gray-200 text-gray-700 rounded-t-lg mx-1 transition-all duration-200" data-tab="2">
            Project Period
          </button>
          <button class="tab-button px-6 py-3 bg-gray-200 text-gray-700 rounded-t-lg mx-1 transition-all duration-200" data-tab="3">
            遞交作品
          </button>
          <button class="tab-button px-6 py-3 bg-gray-200 text-gray-700 rounded-t-lg mx-1 transition-all duration-200" data-tab="4">
            Buildathon
          </button>
        </div>

        <!-- Tab Content -->
        <div class="tab-content active" data-tab="1">
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h3 class="text-2xl font-bold text-center mb-8 text-blue-600">課堂內容</h3>
            <div class="space-y-6">
              <div class="border-l-4 border-blue-500 pl-4">
                <h4 class="text-xl font-semibold mb-2 text-gray-800">World-Edit 命令行</h4>
                <p class="text-gray-600 leading-relaxed">課程教授 World-Edit 命令行的基本概念和運作，例如 //set, //line, //stack, //replace 等，加快學生建設速度。</p>
              </div>
              <div class="border-l-4 border-blue-500 pl-4">
                <h4 class="text-xl font-semibold mb-2 text-gray-800">2D 及 3D 地圖</h4>
                <p class="text-gray-600 leading-relaxed">課程讓學生認識 Google Map, Google Earth 等工具的使用方法，令學生能夠在相對應的坐標興建 1:1 的校園和社區。</p>
              </div>
              <div class="border-l-4 border-blue-500 pl-4">
                <h4 class="text-xl font-semibold mb-2 text-gray-800">實地考察</h4>
                <p class="text-gray-600 leading-relaxed">課程為學生們提供實地考察的機會，一起發掘校園建築物的設計細節，共同討論Minecraft內的建設方法。</p>
              </div>
            </div>
          </div>
        </div>

        <div class="tab-content" data-tab="2">
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h3 class="text-2xl font-bold text-center mb-8 text-green-600">課堂內容</h3>
            <div class="space-y-6">
              <div class="border-l-4 border-green-500 pl-4">
                <h4 class="text-xl font-semibold mb-2 text-gray-800">興建校園及周邊社區</h4>
                <p class="text-gray-600 leading-relaxed">學生利用課堂學習的知識，包括 World-Edit 命令行及網上工具，正式開始創建校園。</p>
              </div>
              <div class="border-l-4 border-green-500 pl-4">
                <h4 class="text-xl font-semibold mb-2 text-gray-800">自主學習</h4>
                <p class="text-gray-600 leading-relaxed">學生們在課餘時間亦可進入 Minecraft Server 自行興建，遇到問題可以向同學或導師發問。</p>
              </div>
              <div class="border-l-4 border-green-500 pl-4">
                <h4 class="text-xl font-semibold mb-2 text-gray-800">團體合作</h4>
                <p class="text-gray-600 leading-relaxed">校園及周邊社區建築範圍較大，學生們需自行分工，加快建構速度。</p>
              </div>
            </div>
          </div>
        </div>

        <div class="tab-content" data-tab="3">
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h3 class="text-2xl font-bold text-center mb-8 text-purple-600">課程成果</h3>
            <div class="space-y-6">
              <div class="border-l-4 border-purple-500 pl-4">
                <h4 class="text-xl font-semibold mb-2 text-gray-800">Minecraft 校園</h4>
                <p class="text-gray-600 leading-relaxed">學生們在 Minecraft Server 內完成校園及社區建設後，供評判判定建築物的準確度及運用的創意力。</p>
              </div>
              <div class="border-l-4 border-purple-500 pl-4">
                <h4 class="text-xl font-semibold mb-2 text-gray-800">成果影片</h4>
                <p class="text-gray-600 leading-relaxed">學生們以 Minecraft 第一人視角錄製影片，帶領觀眾參觀整個校園及社區的建築物，展示校園創建成果。</p>
              </div>
              <div class="border-l-4 border-purple-500 pl-4">
                <h4 class="text-xl font-semibold mb-2 text-gray-800">匯報簡報</h4>
                <p class="text-gray-600 leading-relaxed">學生們完成校園創建後，對校園或社區內建築物背景及歷史加深了認識，藉此機會分享其建築物的用途、背景及歷史及對學校的意義。</p>
              </div>
            </div>
          </div>
        </div>

        <div class="tab-content" data-tab="4">
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h3 class="text-2xl font-bold text-center mb-8 text-orange-600">準備內容</h3>
            <div class="space-y-6">
              <div class="border-l-4 border-orange-500 pl-4">
                <h4 class="text-xl font-semibold mb-2 text-gray-800">排位賽</h4>
                <p class="text-gray-600 leading-relaxed">排位賽幫助學生了解 Buildathon 規則，以及判定隊伍選擇建築物選項的先後次序。</p>
              </div>
              <div class="border-l-4 border-orange-500 pl-4">
                <h4 class="text-xl font-semibold mb-2 text-gray-800">相討策略</h4>
                <p class="text-gray-600 leading-relaxed">學生們在30個建築物選項中，選擇適合自己隊伍的建築物，爭取最高分數。</p>
              </div>
              <div class="border-l-4 border-orange-500 pl-4">
                <h4 class="text-xl font-semibold mb-2 text-gray-800">練習建設</h4>
                <p class="text-gray-600 leading-relaxed">確認建築物選項後，在挑戰賽前進行練習，加快比賽時的興建速度。</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Class Highlights Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">面授課堂花絮</h2>
      <div class="max-w-4xl mx-auto">
        <div class="aspect-video bg-gray-200 rounded-lg mb-8 overflow-hidden">
          <iframe 
            src="https://www.youtube.com/embed/Ua7J6aV8X6o?rel=0&modestbranding=1" 
            title="面授課堂花絮 - Minecraft 校園創建計劃 2021"
            class="w-full h-full"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen>
          </iframe>
        </div>
        <div class="text-center">
        </div>
      </div>
    </div>
  </section>

  <!-- Buildathon Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">Buildathon - 1:1 還原九龍灣挑戰賽</h2>
      
      <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto mb-12">
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <h3 class="text-2xl font-bold mb-4">得分方法​</h3>
          <ul class="space-y-2">
            <li>• 完成建築物的所有合格要求</li>
            <li>• 合格後，完成更多額外項目</li>
          </ul>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <h3 class="text-2xl font-bold mb-4">獲勝方法</h3>
          <p>兩小時內建設並提交指定建築物，獲得最高分數</p>
        </div>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto mb-12">
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <h3 class="text-2xl font-bold mb-4">建築契約卡選項</h3>
          <ul class="space-y-2">
            <li>• 30個九龍灣建築物選項</li>
            <li>• 不同類別、難度、分數</li>
          </ul>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <h3 class="text-2xl font-bold mb-4">檢查/提交建築物</h3>
          <ul class="space-y-2">
            <li>• 檢查為合格：繼續修改/提交</li>
            <li>• 檢查為不合格：必須繼續修改</li>
          </ul>
        </div>
      </div>

      <div class="text-center">
        <a href="#" class="bg-blue-600 text-white px-8 py-3 rounded-full font-semibold hover:bg-blue-700 transition-colors">
          九龍灣建築圖鑒
        </a>
      </div>

      <div class="max-w-4xl mx-auto mt-12">
        <div class="text-center mb-6">
          <p>更多比賽規則介紹可看：</p>
          <p class="font-bold">比賽簡介會（Buildathon部分由 11:15 開始）</p>
        </div>
        <div class="aspect-video bg-gray-200 rounded-lg overflow-hidden">
          <iframe 
            src="https://www.youtube.com/embed/a4Jra-TB9nY?rel=0&modestbranding=1" 
            title="比賽簡介會 - Buildathon 部分 - Minecraft 校園創建計劃 2021"
            class="w-full h-full"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen>
          </iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- Qualifying Round Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">排位賽</h2>
      <p class="text-xl text-center mb-12 max-w-4xl mx-auto">
        係比賽正式開始之前，我地仲舉行左排位賽比各位學生，幫助佢哋理解比賽規則，同埋決定佢哋選擇第一張建築契約卡嘅先後次序～
      </p>
      
      <div class="max-w-4xl mx-auto">
        <Image 
          src={qualifyingRound} 
          alt="排位賽" 
          class="w-full rounded-lg shadow-lg mb-8"
        />
        <p class="text-lg leading-relaxed">
          左圖就係七間學校的排位賽成品啦！<br><br>
          我地選擇左九龍灣嘅屋苑 &#8211; <strong>麗晶花園第12至18座</strong> 作為排位賽嘅建築項目。<br><br>
          每座建築在現實模樣相似，但各個隊伍係 Minecraft 入面起嘅麗晶花園各有特色，無分對錯。<br><br>
          學生們將排位賽期間犯過嘅錯誤都銘記在心，係 Buildathon 比賽當日建設速度全部都快左好多啊！
        </p>
      </div>
    </div>
  </section>

  <!-- Buildathon Results Section -->
  <section class="bg-gray-50 py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-8">Buildathon 成果</h2>
      <p class="text-xl text-center mb-12">呢啲建築物全部都係學生係兩個鐘內起出嚟架！</p>
      
      <!-- Buildathon Products Gallery -->
      <div class="mb-12">
        <h3 class="text-2xl font-bold text-center mb-6">Buildathon 作品展示</h3>
        <p class="text-center text-gray-600 mb-8">學生們在 Buildathon 挑戰賽中創建的精彩作品，展現了他們的創意和建築技能</p>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-7xl mx-auto">
          <div class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
            <Image src={buildathonProduct1} alt="Buildathon 作品 1" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
          </div>
          
          <div class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
            <Image src={buildathonProduct2} alt="Buildathon 作品 2" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
          </div>
          
          <div class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
            <Image src={buildathonProduct3} alt="Buildathon 作品 3" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
          </div>
          
          <div class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
            <Image src={buildathonProduct4} alt="Buildathon 作品 4" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
          </div>
          
          <div class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
            <Image src={buildathonProduct5} alt="Buildathon 作品 5" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
          </div>
          
          <div class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
            <Image src={buildathonProduct6} alt="Buildathon 作品 6" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
          </div>
          
          <div class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
            <Image src={buildathonProduct7} alt="Buildathon 作品 7" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
          </div>
          
          <div class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
            <Image src={buildathonProduct8} alt="Buildathon 作品 8" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
          </div>
          
          <div class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
            <Image src={buildathonProduct9} alt="Buildathon 作品 9" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
          </div>
          
          <div class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
            <Image src={buildathonProduct10} alt="Buildathon 作品 10" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
          </div>
          
          <div class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
            <Image src={buildathonProduct11} alt="Buildathon 作品 11" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
