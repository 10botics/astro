---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
// Main course images
import mainHero from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-2.jpeg';
import minecraftMap from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-3.png';
import qualifyingRound from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-4.png';

// Winner images - Campus Category
import championCampus from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-5.png';
import runnerUpCampus from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-6.png';
import thirdPlaceCampus1 from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-7.png';
import thirdPlaceCampus2 from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-8.png';
import architectureOscar from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-9.png';
import popularChoice from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-10.png';
import bestPresentation from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-11.png';

// Winner images - Buildathon Category
import championBuildathon from '../assets/images/competition/Minecraft 校園創建計劃 2021/scraped-image-12.png';
