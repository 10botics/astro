        <h1 class="text-4xl md:text-6xl font-bold mb-6">{title}</h1>
        <p class="text-xl md:text-2xl opacity-90">{description}</p>
      </div>
    </section>

    <!-- Results Content -->
    <section class="py-16">
      <div class="container mx-auto px-4 max-w-6xl">
        
        <!-- Primary School Section -->
        <div class="mb-16">
          <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">小學組</h2>
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead class="bg-blue-600 text-white">
                  <tr>
                    <th class="px-6 py-4 text-left font-semibold">學校名稱</th>
                    <th class="px-6 py-4 text-left font-semibold">學生姓名</th>
                    <th class="px-6 py-4 text-left font-semibold">獎項</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  {primarySchool.map((entry, index) => (
                    <tr class={index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}>
                      <td class="px-6 py-4 text-gray-800">{entry.school}</td>
                      <td class="px-6 py-4 text-gray-800">{entry.student}</td>
                      <td class="px-6 py-4">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                          {entry.award}
                        </span>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Junior Secondary Section -->
        <div class="mb-16">
