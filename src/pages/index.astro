---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import ContactForm from '../components/homepage/ContactForm.astro';
import BlogGrid from '../components/homepage/BlogGrid.astro';
import CTAWithImage from '../components/homepage/CTAWithImage.astro';
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro';
import VideoSchema from '../components/seo/VideoSchema.astro';

// Import images
import heroImage from '../assets/images/index/hero-image.jpg';
import stemDayImage from '../assets/images/index/stem-day.jpg';
import aiCoursesImage from '../assets/images/index/ai-courses.jpg';
import teacherDevImage from '../assets/images/index/teacher-development.jpg';
import hardwareImage from '../assets/images/index/hardware.jpg';
import fundingImage from '../assets/images/index/funding.jpg';
import logoImage from '../assets/images/index/logo.png';

// Import new gallery images
import galleryImage1 from '../assets/images/index/gallery/image1.png';
import galleryImage2 from '../assets/images/index/gallery/image2.jpeg';
import galleryImage3 from '../assets/images/index/gallery/image3.jpeg';
import galleryImage4 from '../assets/images/index/gallery/image4.jpeg';
import galleryImage5 from '../assets/images/index/gallery/image5.jpeg';
import galleryImage6 from '../assets/images/index/gallery/image6.jpeg';

// Import course hero images
import donkeyCarHero from '../assets/images/school-courses/Donkey Car 無人車課程/donkey-car-intro.jpeg';
import kspHero from '../assets/images/school-courses/ksp太空計劃課程/ksp-hero.png';
import raspberryPiHero from '../assets/images/school-courses/raspberry-pi編程課程/admin-ajax.png';
import minecraftHero from '../assets/images/school-courses/Minecraft校園創建課程/featured-image.png';

// Get latest 3 news articles
const allNews = await getCollection('news');
const latestNews = allNews
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 3);

// Import client images for the partners section
import plkTinKaPing from '../assets/images/關於我們/保良局田家炳小學.jpg';
import stLouis from '../assets/images/關於我們/聖類斯中學.png';
import wahYanKowloon from '../assets/images/關於我們/九龍華仁書院-.png';
import kingGeorge from '../assets/images/關於我們/英皇書院.png';
import cuhk from '../assets/images/關於我們/香港港中文大學CUHK_-300x300-1.png';
import hkage from '../assets/images/關於我們/香港資優學院.jpg';
import cuhkJockey from '../assets/images/關於我們/中大賽馬會智為未來計劃-300x300-1.png';
import claptech from '../assets/images/關於我們/鼓掌-–創新教育歷程CLAPTECH-300x300-1.png';
import hksp from '../assets/images/關於我們/香港科學園.png';

// SEO optimized homepage data
const pageTitle = "10教育STEM課程";
const pageDescription = "香港專業STEM教育機構，提供到校AI人工智能、無人機、編程、機械人課程，五年經驗服務50間學校超過1000學生，助學校申請教育撥款";
const pageKeywords = "STEM教育, AI課程, 人工智能, 到校課程, STEM Day, 教師發展日, 硬件提供, 教育撥款, 香港, 10教育, 10Botics";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  ogImage="/images/og/homepage.jpg"
>
  <div class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative text-white py-32 overflow-hidden">
      <div class="absolute inset-0">
        <Image src={heroImage} alt="STEM 教育背景" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>
      </div>
      <div class="relative container mx-auto px-4">
        <div class="max-w-6xl mx-auto text-center">
          <h2 class="text-2xl md:text-3xl mb-8 opacity-90">專注 STEM 課程研發及教學</h2>
          <h1 class="text-5xl md:text-5xl lg:text-6xl font-bold mb-8">STEM 到校課程</h1>
          <p class="text-xl mb-12 opacity-80 max-w-4xl mx-auto">
            教材及課程是由我們專業 STEM 團隊開發，提供創新及完整的STEM教育方案，讓每位學生發揮創意，實現所想
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/school-courses" 
               class="bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
              瀏覽課程
            </a>
            <a href="/contact-us" 
               class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors">
              聯絡我們
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section id="stats-section" class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-4 gap-8 text-center">
            <div class="bg-white p-8 rounded-lg shadow-lg">
              <div class="text-4xl font-bold text-blue-600 mb-2" data-count="3500">0</div>
              <p class="text-gray-600">累計時間</p>
            </div>
            <div class="bg-white p-8 rounded-lg shadow-lg">
              <div class="text-4xl font-bold text-blue-600 mb-2" data-count="50">0</div>
              <p class="text-gray-600">合作學校</p>
            </div>
            <div class="bg-white p-8 rounded-lg shadow-lg">
              <div class="text-4xl font-bold text-blue-600 mb-2" data-count="1000">0</div>
              <p class="text-gray-600">學生受益</p>
            </div>
            <div class="bg-white p-8 rounded-lg shadow-lg">
              <div class="text-4xl font-bold text-blue-600 mb-2" data-count="5">0</div>
              <p class="text-gray-600">年經驗</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Courses Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-4xl font-bold text-center mb-12 text-gray-800">精選課程</h2>
          
          <!-- Course Carousel -->
          <div class="relative">
            <div class="course-carousel overflow-hidden rounded-lg shadow-xl">
              <div class="course-track flex transition-transform duration-500 ease-in-out" id="courseTrack">
                <!-- Course 1: Donkey Car -->
                <div class="course-slide min-w-full relative h-[500px] rounded-lg overflow-hidden">
                  <div class="absolute inset-0">
                    <Image src={donkeyCarHero} alt="Donkey Car 無人車課程" class="w-full h-full object-cover" />
                    <div class="absolute inset-0 bg-black bg-opacity-50"></div>
                  </div>
                  <div class="relative z-10 flex items-center justify-center h-full p-8">
                    <div class="max-w-3xl mx-auto text-center text-white">
                      <h3 class="text-2xl font-bold mb-4">Donkey Car 無人車入門課程</h3>
                      <p class="text-lg mb-6 opacity-90 leading-relaxed">
                        通過實作無人駕駛與自動駕駛，培養學生對AI和資訊科技的興趣。課程包括深度學習、卷積神經網路，使用Python和Tensorflow控制無人車，培訓自駕模組並測試。課程末段學生將組建可應對多種路況的智能小車
                      </p>
                      <a href="/school-courses/donkey-car/" class="inline-block bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
                        了解更多
                      </a>
                    </div>
                  </div>
                </div>

                <!-- Course 2: KSP -->
                <div class="course-slide min-w-full relative h-[500px] rounded-lg overflow-hidden">
                  <div class="absolute inset-0">
                    <Image src={kspHero} alt="KSP 太空計劃課程" class="w-full h-full object-cover" />
                    <div class="absolute inset-0 bg-black bg-opacity-50"></div>
                  </div>
                  <div class="relative z-10 flex items-center justify-center h-full p-8">
                    <div class="max-w-3xl mx-auto text-center text-white">
                      <h3 class="text-2xl font-bold mb-4">Kerbal Space Program 太空任務設計證書課程</h3>
                      <p class="text-lg mb-6 opacity-90 leading-relaxed">
                        學生將進入迷人的太空科學世界，建構火箭、掌握推力、軌道、重力等核心概念。他們將學習如何計劃和執行成功的發射任務。
                      </p>
                      <a href="/school-courses/ksp/" class="inline-block bg-white text-orange-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
                        了解更多
                      </a>
                    </div>
                  </div>
                </div>

                <!-- Course 3: Raspberry Pi -->
                <div class="course-slide min-w-full relative h-[500px] rounded-lg overflow-hidden">
                  <div class="absolute inset-0">
                    <Image src={raspberryPiHero} alt="Raspberry Pi 編程課程" class="w-full h-full object-cover" />
                    <div class="absolute inset-0 bg-black bg-opacity-50"></div>
                  </div>
                  <div class="relative z-10 flex items-center justify-center h-full p-8">
                    <div class="max-w-3xl mx-auto text-center text-white">
                      <h3 class="text-2xl font-bold mb-4">Raspberry Pi 入門課程</h3>
                      <p class="text-lg mb-6 opacity-90 leading-relaxed">
                        課程旨在幫助學生掌握 Raspberry Pi 及 Python 編程的基礎知識，以致配合機器學習和人工智慧，進行人體姿態檢測等。
                      </p>
                      <a href="/school-courses/raspberry-pi/" class="inline-block bg-white text-green-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
                        了解更多
                      </a>
                    </div>
                  </div>
                </div>

                <!-- Course 4: Minecraft -->
                <div class="course-slide min-w-full relative h-[500px] rounded-lg overflow-hidden">
                  <div class="absolute inset-0">
                    <Image src={minecraftHero} alt="Minecraft 校園創建課程" class="w-full h-full object-cover" />
                    <div class="absolute inset-0 bg-black bg-opacity-50"></div>
                  </div>
                  <div class="relative z-10 flex items-center justify-center h-full p-8">
                    <div class="max-w-3xl mx-auto text-center text-white">
                      <h3 class="text-2xl font-bold mb-4">Minecraft 校園創建課程</h3>
                      <p class="text-lg mb-6 opacity-90 leading-relaxed">
                        課程讓學生運用地理、數學、藝術等知識，學習Minecraft編程，完成校園及社區建築。融入遊戲提升學習興趣，達致自主學習。
                      </p>
                      <a href="/school-courses/minecraft/" class="inline-block bg-white text-purple-600 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
                        了解更多
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Navigation Buttons -->
            <button class="course-nav-btn course-prev absolute left-4 top-1/2 transform -translate-y-1/2 bg-white bg-opacity-80 hover:bg-opacity-100 text-gray-800 p-3 rounded-full shadow-lg transition-all duration-300 z-10" aria-label="Previous slide">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
            </button>
            <button class="course-nav-btn course-next absolute right-4 top-1/2 transform -translate-y-1/2 bg-white bg-opacity-80 hover:bg-opacity-100 text-gray-800 p-3 rounded-full shadow-lg transition-all duration-300 z-10" aria-label="Next slide">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </button>

            <!-- Pagination Dots -->
            <div class="course-pagination flex justify-center mt-8 space-x-3">
              <button class="course-dot w-3 h-3 rounded-full bg-gray-300 hover:bg-gray-400 transition-colors course-dot-active" data-slide="0" aria-label="Go to slide 1"></button>
              <button class="course-dot w-3 h-3 rounded-full bg-gray-300 hover:bg-gray-400 transition-colors" data-slide="1" aria-label="Go to slide 2"></button>
              <button class="course-dot w-3 h-3 rounded-full bg-gray-300 hover:bg-gray-400 transition-colors" data-slide="2" aria-label="Go to slide 3"></button>
              <button class="course-dot w-3 h-3 rounded-full bg-gray-300 hover:bg-gray-400 transition-colors" data-slide="3" aria-label="Go to slide 4"></button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Gallery Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-4xl font-bold text-center mb-12 text-gray-800">活動花絮</h2>
          <div class="grid md:grid-cols-3 gap-6">
            <div class="bg-white rounded-lg overflow-hidden shadow-lg">
              <Image src={galleryImage1} alt="STEM活動花絮" class="w-full h-64 object-cover" />
            </div>
            <div class="bg-white rounded-lg overflow-hidden shadow-lg">
              <Image src={galleryImage2} alt="STEM活動花絮" class="w-full h-64 object-cover" />
            </div>
            <div class="bg-white rounded-lg overflow-hidden shadow-lg">
              <Image src={galleryImage3} alt="STEM活動花絮" class="w-full h-64 object-cover" />
            </div>
            <div class="bg-white rounded-lg overflow-hidden shadow-lg">
              <Image src={galleryImage4} alt="STEM活動花絮" class="w-full h-64 object-cover" />
            </div>
            <div class="bg-white rounded-lg overflow-hidden shadow-lg">
              <Image src={galleryImage5} alt="STEM活動花絮" class="w-full h-64 object-cover" />
            </div>
            <div class="bg-white rounded-lg overflow-hidden shadow-lg">
              <Image src={galleryImage6} alt="STEM活動花絮" class="w-full h-64 object-cover" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-20 bg-blue-50">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-4xl font-bold text-center mb-8 text-gray-800">我們的服務</h2>
          <h5 class="text-xl text-center mb-12 text-gray-600">提供一系列STEM教育資源和方案</h5>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                         <!-- 到校課程 -->
             <div class="relative h-80 rounded-lg overflow-hidden shadow-lg group">
               <div class="absolute inset-0">
                 <Image src={heroImage} alt="到校課程" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" />
                 <div class="absolute inset-0 bg-black bg-opacity-30"></div>
               </div>
               <div class="absolute inset-0 flex flex-col justify-center items-center text-center text-white p-6">
                <h3 class="text-2xl font-bold mb-4">到校課程</h3>
                <p class="text-lg mb-6 opacity-90">針對學校的需要特別設計課程及方案，開設新穎有趣的STEM課程，讓每位學生發揮創意，實現所想。</p>
                <a href="/school-courses" class="inline-block bg-orange-200 bg-opacity-30 border border-orange-300 text-white px-6 py-3 rounded-full font-semibold hover:bg-orange-300 hover:bg-opacity-40 transition-all duration-300 backdrop-blur-sm">
                  了解更多
                </a>
              </div>
            </div>

                         <!-- STEM Day -->
             <div class="relative h-80 rounded-lg overflow-hidden shadow-lg group">
               <div class="absolute inset-0">
                 <Image src={stemDayImage} alt="STEM Day" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" />
                 <div class="absolute inset-0 bg-black bg-opacity-30"></div>
               </div>
               <div class="absolute inset-0 flex flex-col justify-center items-center text-center text-white p-6">
                <h3 class="text-2xl font-bold mb-4">STEM Day</h3>
                <p class="text-lg mb-6 opacity-90">全力支援學校籌辦STEM day，讓學生對STEM有更加深入的認識，曠闊視野。</p>
                <a href="/stemday" class="inline-block bg-orange-200 bg-opacity-30 border border-orange-300 text-white px-6 py-3 rounded-full font-semibold hover:bg-orange-300 hover:bg-opacity-40 transition-all duration-300 backdrop-blur-sm">
                  了解更多
                </a>
              </div>
            </div>

                         <!-- 人工智能課程 -->
             <div class="relative h-80 rounded-lg overflow-hidden shadow-lg group">
               <div class="absolute inset-0">
                 <Image src={aiCoursesImage} alt="人工智能課程" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" />
                 <div class="absolute inset-0 bg-black bg-opacity-30"></div>
               </div>
               <div class="absolute inset-0 flex flex-col justify-center items-center text-center text-white p-6">
                <h3 class="text-2xl font-bold mb-4">人工智能課程</h3>
                <p class="text-lg mb-6 opacity-90">為不同學生提供一系列AI智能課程選擇，把現實生活的例子中帶進複雜的課程中，令學習變得輕鬆及有趣。</p>
                <a href="/school-courses/tag/ai" class="inline-block bg-orange-200 bg-opacity-30 border border-orange-300 text-white px-6 py-3 rounded-full font-semibold hover:bg-orange-300 hover:bg-opacity-40 transition-all duration-300 backdrop-blur-sm">
                  了解更多
                </a>
              </div>
            </div>

            <!-- 教師發展日 -->
            <div class="relative h-80 rounded-lg overflow-hidden shadow-lg group">
              <div class="absolute inset-0">
                <Image src={teacherDevImage} alt="教師發展日" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" />
                <div class="absolute inset-0 bg-black bg-opacity-30"></div>
              </div>
              <div class="absolute inset-0 flex flex-col justify-center items-center text-center text-white p-6">
                <h3 class="text-2xl font-bold mb-4">教師發展日</h3>
                <p class="text-lg mb-6 opacity-90">定期舉辦教師工作坊，為教師提供STEM培訓，實踐 STEM 教學應用及 教案編寫。</p>
                <a href="/teacher-workshop" class="inline-block bg-orange-200 bg-opacity-30 border border-orange-300 text-white px-6 py-3 rounded-full font-semibold hover:bg-orange-300 hover:bg-opacity-40 transition-all duration-300 backdrop-blur-sm">
                  了解更多
                </a>
              </div>
            </div>

            <!-- 硬件提供 -->
            <div class="relative h-80 rounded-lg overflow-hidden shadow-lg group">
              <div class="absolute inset-0">
                <Image src={hardwareImage} alt="硬件提供" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" />
                <div class="absolute inset-0 bg-black bg-opacity-30"></div>
              </div>
              <div class="absolute inset-0 flex flex-col justify-center items-center text-center text-white p-6">
                <h3 class="text-2xl font-bold mb-4">硬件提供</h3>
                <p class="text-lg mb-6 opacity-90">設有硬件外借的服務，例如手提電腦，協助學校解決一次需要大量硬件的需求。</p>
                <a href="/contact-us" class="inline-block bg-orange-200 bg-opacity-30 border border-orange-300 text-white px-6 py-3 rounded-full font-semibold hover:bg-orange-300 hover:bg-opacity-40 transition-all duration-300 backdrop-blur-sm">
                  了解更多
                </a>
              </div>
            </div>

                         <!-- 學校申請教育撥款協助 -->
             <div class="relative h-80 rounded-lg overflow-hidden shadow-lg group">
               <div class="absolute inset-0">
                 <Image src={fundingImage} alt="學校申請教育撥款協助" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" />
                 <div class="absolute inset-0 bg-black bg-opacity-30"></div>
               </div>
               <div class="absolute inset-0 flex flex-col justify-center items-center text-white p-6 text-center">
                <h3 class="text-2xl font-bold mb-4">學校申請教育撥款協助</h3>
                <p class="text-lg mb-6 opacity-90">設有「奇趣it識多啲」計劃、「中學IT 創新實驗室」等STEM 教育資助，協助學校申請教育撥款</p>
                <a href="/funding-application/it-innovation-lab" class="inline-block bg-orange-200 bg-opacity-30 border border-orange-300 text-white px-6 py-3 rounded-full font-semibold hover:bg-orange-300 hover:bg-opacity-40 transition-all duration-300 backdrop-blur-sm">
                  了解更多
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Latest News Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-4xl font-bold text-center mb-8 text-gray-800">最新消息</h2>
          <div class="grid md:grid-cols-3 gap-8">
            {latestNews.map((article) => (
              <article class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow group hover:border-gray-300">
                {/* Featured Image */}
                {article.data.featuredImage && (
                  <div class="aspect-video overflow-hidden">
                    <img 
                      src={typeof article.data.featuredImage === 'string' ? article.data.featuredImage : (article.data.featuredImage as any).src} 
                      alt={article.data.title} 
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" 
                    />
                  </div>
                )}
                
                <div class="p-6">
                  {/* Category and Date */}
                  <div class="flex items-center justify-between text-sm text-gray-500 mb-3">
                    <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-xs font-medium">
                      {article.data.category}
                    </span>
                    <time datetime={article.data.publishDate.toISOString()}>
                      {new Date(article.data.publishDate).toLocaleDateString('zh-TW', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                  </div>

                  {/* Title */}
                  <h3 class="text-lg font-semibold text-gray-900 mb-3 line-clamp-2 hover:text-blue-600 transition-colors">
                    <a href={`/news/${article.slug}`} class="hover:underline">
                      {article.data.title}
                    </a>
                  </h3>

