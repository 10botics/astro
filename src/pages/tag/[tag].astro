---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import { generateExcerpt } from '../../utils/excerpt';
import { 
  discoverAllCourses, 
  filterCoursesByTag, 
  getAllUniqueTags, 
  generateTagPaths, 
  generateTagSlug,
  TAG_MAPPING,
  type Course 
} from '../../utils/courseMappings';

// Import background image
import aiCoursesImage from '../../assets/images/index/ai-courses.jpg';

// Get the tag from the URL parameter
export async function getStaticPaths() {
  // Auto-discover courses using shared utility (includes both school-courses and stemday)
  const allCourses = await discoverAllCourses();

  // Get all unique tags from all courses
  const allTags = getAllUniqueTags(allCourses);
  
  // Generate tag paths using shared utility
  return generateTagPaths(allTags);
}

// Get the tag from props
const { tag, originalTag } = Astro.props;

// Auto-discover courses using shared utility (includes both school-courses and stemday)
const allCourses = await discoverAllCourses();

// Filter courses by the current tag using shared utility
const filteredCourses = filterCoursesByTag(allCourses, tag, originalTag);

// Sort courses by publication date (newest first)
const sortedCourses = filteredCourses.sort((a, b) => 
  new Date(b.publishDate).getTime() - new Date(a.publishDate).getTime()
);

// Get news articles and filter by tag
const allNews = await getCollection('news');
const filteredNews = allNews.filter(article => {
  if (tag === 'ai') {
    return article.data.tags?.some(tag => 
      tag.includes('AI') || tag.includes('人工智能') || tag.includes('ai')
    );
  } else {
    return article.data.tags?.some(tag => {
      const tagSlug = generateTagSlug(tag);
      return tagSlug === tag || tag === originalTag;
    });
  }
});

// Sort news by publication date (newest first)
const sortedNews = filteredNews
  .map(article => ({
    ...article,
    data: {
      ...article.data,
      excerpt: article.data.excerpt || generateExcerpt(article.body, 200)
    }
  }))
  .sort((a, b) => 
    new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
  );

// SEO optimized page data
const pageTitle = `${originalTag} 相關內容 - 10教育STEM及AI課程與新聞`;
const pageDescription = `瀏覽所有 ${originalTag} 相關的STEM及人工智能課程和最新消息，包括編程、機器人技術、AI應用等專業到校課程。共${sortedCourses.length}個課程，${sortedNews.length}篇新聞。`;
const pageKeywords = `${originalTag}, STEM課程, AI課程, 編程課程, 機器人課程, 到校課程, 10教育, 教育新聞`;
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  ogImage="/images/og/courses-overview.jpg"
>
  <main class="tag-page">
    <!-- Header -->
    <header class="relative text-white py-16 overflow-hidden">
      <div class="absolute inset-0">
        <Image src={aiCoursesImage} alt="AI課程背景" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>
      </div>
      <div class="relative container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl font-bold mb-6">{originalTag} 相關內容</h1>
          <p class="text-xl opacity-90 mb-8">
            探索我們的 {originalTag} 相關 STEM 及人工智能課程和最新消息
          </p>
          <div class="flex justify-center gap-4">
            <a href="/school-courses" class="bg-white text-blue-600 px-6 py-2 rounded-lg hover:bg-gray-100 transition-colors">
              所有課程
            </a>
            <a href="/news" class="bg-white text-blue-600 px-6 py-2 rounded-lg hover:bg-gray-100 transition-colors">
              所有新聞
            </a>
          </div>
        </div>
      </div>
    </header>

    <!-- Courses Section -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">
            {originalTag} 相關課程 ({sortedCourses.length})
          </h2>
          
          {sortedCourses.length > 0 ? (
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
              {sortedCourses.map((course) => (
                <article class="course-card bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden">
                  <!-- Hero Image -->
                  {course.heroImage && (
                    <div class="course-image-container bg-gray-100 overflow-hidden aspect-video">
                      {typeof course.heroImage === 'string' ? (
                        <img 
                          src={course.heroImage} 
                          alt={course.title}
                          width={600}
                          height={400}
                          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                        />
                      ) : (
                        <Image 
                          src={course.heroImage} 
                          alt={course.title}
                          width={600}
                          height={400}
                          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                        />
                      )}
                    </div>
                  )}
                  <div class="p-6">
                    <!-- Course Header -->
                    <div class="mb-4">
                      <h3 class="text-xl font-bold mb-2 text-gray-800 line-clamp-2">
                        <a href={course.source === 'stemday' ? `/stemday/${course.filename.replace('.astro', '')}` : `/school-courses/${course.slug}`} 
                           class="hover:text-blue-600 transition-colors">
                          {course.title}
                        </a>
                      </h3>
                      
                      {course.description && (
                        <p class="text-gray-600 text-sm line-clamp-3 mb-4">
                          {course.description}
                        </p>
                      )}
                    </div>
                    
                    <!-- Tags -->
                    <div class="mb-4">
                      {(() => {
                        const targetAudienceTags = ['初小', '高小', '初中', '高中'];
                        const otherTags = course.tags.filter(tag => !targetAudienceTags.includes(tag));
                        const audienceTags = course.tags.filter(tag => targetAudienceTags.includes(tag));
                        
                        return (
                          <div class="space-y-2">
                            {/* Target Audience */}
                            {audienceTags.length > 0 && (
                              <div class="flex flex-wrap gap-1 items-center">
                                <span class="text-xs font-medium text-gray-600 mr-1">適合對象:</span>
                                {audienceTags.map(tag => {
                                  // Tag mapping for target audience tags
                                  const audienceTagMapping: { [key: string]: string } = {
                                    '初小': 'junior-primary',
                                    '高小': 'senior-primary', 
                                    '初中': 'junior-secondary',
                                    '高中': 'senior-secondary'
                                  };
                                  
                                  const tagSlug = audienceTagMapping[tag] || tag.toLowerCase().replace(/\s+/g, '-');
                                  
                                  return (
                                    <a href={`/tag/${tagSlug}`} class="bg-cyan-100 text-cyan-800 px-2 py-1 rounded text-xs font-medium hover:bg-cyan-200 transition-colors">
                                      {tag}
                                    </a>
                                  );
                                })}
                              </div>
                            )}
                            
                            {/* Other Tags */}
                            {otherTags.length > 0 && (
                              <div class="flex flex-wrap gap-1">
                                {otherTags.map((tag: string) => {
                                  // Generate tag slug using shared utility
                                  const tagSlug = generateTagSlug(tag);
                                  
                                  return (
                                    <a href={`/tag/${tagSlug}`}
                                       class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs font-medium hover:bg-blue-200 transition-colors">
                                      {tag}
                                    </a>
                                  );
                                })}
                              </div>
                            )}
                          </div>
                        );
                      })()}
                    </div>
                    
                    <!-- Action Button -->
                    <div class="mt-auto">
                      <a href={course.source === 'stemday' ? `/stemday/${course.filename.replace('.astro', '')}` : `/school-courses/${course.slug}`}
                         class="inline-block w-full text-center bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors text-sm font-medium">
                        查看課程詳情
                      </a>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          ) : (
            <div class="text-center py-16">
              <h3 class="text-2xl font-bold text-gray-800 mb-4">沒有找到 {originalTag} 相關的課程</h3>
              <p class="text-gray-600 mb-8">請嘗試其他標籤或瀏覽所有課程</p>
              <a href="/school-courses" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors">
                瀏覽所有課程
              </a>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- News Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">
            {originalTag} 相關新聞 ({sortedNews.length})
          </h2>
          
          {sortedNews.length > 0 ? (
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
              {sortedNews.map((article) => (
                <article class="news-card bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden">
                  <!-- Featured Image -->
                  {article.data.featuredImage && (
                    <div class="aspect-video bg-gray-200 overflow-hidden">
                      {typeof article.data.featuredImage === 'string' ? (
                        <img 
                          src={article.data.featuredImage} 
                          alt={article.data.title}
                          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                          loading="lazy"
                          width={400}
                          height={225}
                        />
                      ) : (
                        <Image 
                          src={article.data.featuredImage} 
                          alt={article.data.title}
                          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                          loading="lazy"
                          width={400}
                          height={225}
                        />
                      )}
                    </div>
                  )}
                  <div class="p-6">
                    <!-- News Header -->
                    <div class="mb-4">
                      <h3 class="text-xl font-bold mb-2 text-gray-800 line-clamp-2">
                        <a href={`/news/${article.slug}`} 
                           class="hover:text-blue-600 transition-colors">
                          {article.data.title}
                        </a>
                      </h3>
                      
                      {article.data.excerpt && (
                        <p class="text-gray-600 text-sm line-clamp-3 mb-4">
                          {article.data.excerpt}
                        </p>
                      )}
                    </div>
                    
                    <!-- Meta Info -->
                    <div class="mb-4 text-sm text-gray-500">
                      <span>{new Date(article.data.publishDate).toLocaleDateString('zh-HK')}</span>
                      {article.data.category && (
                        <span class="ml-4 bg-gray-100 px-2 py-1 rounded text-xs">
                          {article.data.category}
                        </span>
                      )}
                    </div>
                    
                    <!-- Tags -->
                    {article.data.tags && article.data.tags.length > 0 && (
                      <div class="mb-4">
                        <div class="flex flex-wrap gap-1">
                          {article.data.tags.map((tag: string) => {
                            const tagSlug = generateTagSlug(tag);
                            
                            return (
                              <a href={`/tag/${tagSlug}`}
                                 class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs font-medium hover:bg-green-200 transition-colors">
                                {tag}
                              </a>
                            );
                          })}
                        </div>
                      </div>
                    )}
                    
                    <!-- Action Button -->
                    <div class="mt-auto">
                      <a href={`/news/${article.slug}`}
                         class="inline-block w-full text-center bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition-colors text-sm font-medium">
                        閱讀全文
                      </a>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          ) : (
            <div class="text-center py-16">
              <h3 class="text-2xl font-bold text-gray-800 mb-4">沒有找到 {originalTag} 相關的新聞</h3>
              <p class="text-gray-600 mb-8">請嘗試其他標籤或瀏覽所有新聞</p>
              <a href="/news" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition-colors">
                瀏覽所有新聞
              </a>
            </div>
          )}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .tag-page {
    min-height: 100vh;
  }
  
  .course-card, .news-card {
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .course-card .p-6, .news-card .p-6 {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 