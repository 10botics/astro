      items={courseCurriculum}
      hours="3-5 小時"
    />


    <!-- FAQ Section -->
    <QnASection faqs={faqItems.map(item => ({
      question: item.question,
      answer: item.answer.join('\n')
    }))} />

    <!-- Related Courses Section -->
    <RelatedCourses courseTags={courseData.tags} courseTitle={courseData.title} currentCourseSlug="ai-video-production" context="course" />
    
    <!-- Related News Section -->
    <RelatedNews courseTags={courseData.tags} courseTitle={courseData.title} />

    <!-- Contact Section -->
