      title={courseData.title}
      subtitle={courseData.subtitle}
      description={courseData.detailedDescription}
      heroImage={courseData.heroImage}
      tags={courseData.tags}
    />

    <!-- Cross-disciplinary Learning Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">跨學科學習</h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {crossDisciplinaryLearning.map((item) => (
            <div class="bg-white p-6 rounded-lg shadow-md text-center">
              <div class="text-4xl text-blue-600 mb-4">
                <i class={item.icon}></i>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-3">{item.title}</h3>
              <p class="text-gray-600">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Course Content Section -->
    <DualCourseContent 
      beginnerTitle="初階課程"
      advancedTitle="進階：故事繪本課程"
      beginnerItems={beginnerCurriculum}
      advancedItems={advancedCurriculum}
      beginnerHours="2-6 小時"
      advancedHours="4-10 小時"
    />

    <!-- Course Arrangement Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">課程安排</h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          {courseArrangement.map((item) => (
            <div class="bg-white p-6 rounded-lg shadow-md">
              <div class="flex items-start">
                <div class="text-3xl text-blue-600 mr-4">
                  <i class={item.icon}></i>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">{item.title}</h3>
                  {item.description && <p class="text-gray-600">{item.description}</p>}
                </div>
              </div>
            </div>
          ))}
        </div>
        <div class="text-center mt-8">
          <p class="text-gray-600">歡迎填妥下方表格讓同事為你提供咨詢。</p>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <QnASection faqs={faqItems.map(item => ({
      question: item.question,
      answer: item.answer.join('\n')
    }))} />

    <!-- Contact Section -->
    <section class="py-16 bg-gray-50">
