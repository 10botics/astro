---
import Layout from '../../layouts/Layout.astro';
import HeroSection from '../../components/course/HeroSection.astro';
import SingleCourseContent from '../../components/course/SingleCourseContent.astro';
import QnASection from '../../components/course/QnASection.astro';
import ContactSection from '../../components/ContactSection.astro';
import RelatedNews from '../../components/course/RelatedNews.astro';
import RelatedCourses from '../../components/course/RelatedCourses.astro';
import { Image } from 'astro:assets';

// Import hero image
import visionProHero from '../../assets/images/school-courses/Unity 課程/hero-image.png';

// Course data
export const courseData = {
  title: "Apple Vision Pro 遊戲開發課程",
  subtitle: "探索 Vision Pro 遊戲開發的無限可能！",
  tags: ["Apple Vision Pro", "Unity", "VR", "AR", "遊戲開發", "空間運算", "初中", "高中"],
  videoId: "your-video-id-here",
  description: "Apple Vision Pro 是蘋果公司研發的頭戴式裝置，具有強大的空間運算能力，提供沉浸式置身虛擬環境的效果。學員將可以親身體驗使用 Vision Pro，並利用 Unity 平台開發彈弓小遊戲，以掌握 Vision Pro 的獨特技術，如眼球追蹤和手勢追蹤。",
  detailedDescription: "Apple Vision Pro 是蘋果公司研發的頭戴式裝置，具有強大的空間運算能力，提供沉浸式置身虛擬環境的效果。學員將可以親身體驗使用 Vision Pro，並利用 Unity 平台開發彈弓小遊戲，以掌握 Vision Pro 的獨特技術，如眼球追蹤和手勢追蹤。課程結合理論與實作，讓學生在體驗前沿科技的同時，學習遊戲開發的核心技能。",
  heroImage: visionProHero
};

// Course features
const courseFeatures = [
  {
    icon: "fab fa-unity",
    title: "Unity 編程",
    description: "利用 Unity 開發適用於 Apple Vision Pro 的遊戲，如設定專案、設計互動功能等"
  },
  {
    icon: "fas fa-eye",
    title: "空間運算",
    description: "掌握如何利用眼球追蹤和手勢追蹤等技術"
  },
  {
    icon: "fas fa-gamepad",
    title: "遊戲開發技巧",
    description: "利用 Scriptable Objects 和 Prefabs 設計遊戲關卡，設計可重複使用和修改的遊戲元素"
  },
  {
    icon: "fas fa-rocket",
    title: "發佈作品",
    description: "發佈到 Vision OS App Store，將關卡整合到主遊戲，試玩和評價同學的關卡設計"
  }
];

// Course objectives
const courseObjectives = [
  {
    icon: "fas fa-vr-cardboard",
    title: "體驗並熟悉 Apple Vision Pro 使用方式",
    description: "親身體驗最新的空間運算技術，了解 Vision Pro 的操作介面和互動模式"
  },
  {
    icon: "fas fa-code",
    title: "掌握 Apple Vision Pro 遊戲開發的方法",
    description: "學習使用 Unity 開發專為 Vision Pro 設計的遊戲應用程式"
  },
  {
    icon: "fas fa-puzzle-piece",
    title: "整合小遊戲關卡限制與通關條件",
    description: "設計完整的遊戲體驗，包含關卡設計、遊戲機制和通關系統"
  }
];

// Course curriculum
const curriculumItems = [
  {
    title: "體驗使用 Vision Pro 和設定 Vision Pro Unity Project，為 Vision Pro 遊戲開發基本互動功能",
    content: [
      "Apple Vision Pro 硬體介紹與體驗",
      "Vision Pro 操作介面和手勢控制",
      "Unity for Vision Pro 開發環境設定",
      "創建第一個 Vision Pro 專案",
      "基本互動功能實作（手勢識別、眼球追蹤）",
      "空間錨點和物件定位"
    ]
  },
  {
    title: "改善互動體驗，設計遊戲關卡，儲存關卡資料",
    content: [
      "優化使用者互動體驗",
      "遊戲關卡設計原理",
      "Scriptable Objects 應用",
      "關卡資料結構設計",
      "本地資料儲存與讀取",
      "彈弓遊戲核心機制開發"
    ]
  },
  {
    title: "關卡重置與限制，設計遊戲通關條件",
    content: [
      "關卡重置系統實作",
