---

<Layout title={courseData.title}>
  <HeroSection 
    title={courseData.title}
    subtitle={courseData.subtitle}
    tags={courseData.tags}
    videoId={courseData.videoId}
    description={courseData.description}
  />

  <!-- What is Delightex Section -->
  <section class="bg-gray-50 py-16">
    <div class="container mx-auto px-4 max-w-6xl">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">什麼是 Delightex？</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {whatIsDelightex.map((feature) => (
          <div class="bg-white border border-gray-200 rounded-lg p-6 text-center hover:shadow-lg transition-shadow">
            <Image src={feature.image} alt={feature.title} class="w-32 h-32 mx-auto mb-4 object-cover rounded-lg" />
            <p class="text-gray-700 leading-relaxed">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Course Features Section -->
  <section class="bg-white py-16">
    <div class="container mx-auto px-4 max-w-6xl">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">課程特色</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {courseFeatures.map((feature) => (
          <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center mb-4">
              <i class={`${feature.icon} text-3xl text-cyan-500 mr-4`}></i>
              <h3 class="text-xl font-semibold text-gray-900">{feature.title}</h3>
            </div>
            <p class="text-gray-700 leading-relaxed">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Course Content Section -->
  <SingleCourseContent 
    items={curriculumItems} 
    hours="10 小時"
    images={[
      { src: delightexSolarSystem, alt: "Delightex solar system" },
      { src: delightexBowling, alt: "Delightex bowling" }
    ]}
  />

  <!-- Course Arrangement Section -->
  <section class="bg-white py-16">
    <div class="container mx-auto px-4 max-w-6xl">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">課程安排</h2>
      
      <div class="grid md:grid-cols-2 gap-8">
        {courseArrangements.map((arrangement) => (
          <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center mb-4">
              <i class={`${arrangement.icon} text-3xl text-cyan-500 mr-4`}></i>
              <h3 class="text-xl font-semibold text-gray-900">{arrangement.title}</h3>
            </div>
            <p class="text-gray-700 leading-relaxed whitespace-pre-line">{arrangement.description}</p>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-8">
        <p class="text-lg text-gray-700">歡迎填妥下方表格讓同事為你提供咨詢。</p>
      </div>
    </div>
  </section>

  <!-- Student Work Examples Section -->
  <section class="bg-gray-50 py-16">
    <div class="container mx-auto px-4 max-w-6xl">
      <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">學生成果​</h2>
      
      <div class="grid md:grid-cols-2 gap-8">
        {studentWorkExamples.map((work) => (
          <div class="bg-white rounded-lg overflow-hidden shadow-lg">
            <iframe 
              width="100%" 
              height="400" 
              frameborder="0" 
              src={work.embedUrl}
              title={work.title}
              class="w-full"
            ></iframe>
          </div>
        ))}
      </div>
    </div>
  </section>

  <QnASection faqs={faqItems} />
  <!-- Related Courses Section -->
  <RelatedCourses courseTags={courseData.tags} courseTitle={courseData.title} currentCourseSlug="delightex-game-design" context="course" />
  <!-- Related News Section -->
  <RelatedNews courseTags={courseData.tags} courseTitle={courseData.title} />



  <!-- Contact Section -->
  <ContactSection subtitle="想了解更多關於 Delightex 遊戲設計課程的資訊？歡迎聯絡我們，我們會為您提供詳細的課程安排和報名資訊。" />
</Layout> 
