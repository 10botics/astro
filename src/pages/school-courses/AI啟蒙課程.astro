      title={courseData.title}
      subtitle={courseData.subtitle}
      description={courseData.detailedDescription}
      heroImage={courseData.heroImage}
      tags={courseData.tags}
    />

    <!-- Course Highlights Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">課程亮點</h2>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {courseHighlights.map((item) => (
            <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
              <div class="flex items-start">
                <div class="text-3xl text-cyan-500 mr-4">
                  <i class={item.icon}></i>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-3">{item.title}</h3>
                  <p class="text-gray-600">{item.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>


    <!-- Course Features Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">課程特色</h2>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {courseFeatures.map((item, index) => {
            const featureImages = [aiApplication, aiImageGeneration, teachableMachine, meshyAi, replitCoding, ai2dVideo];
            const featureImage = featureImages[index] || aiApplication;
            
            if (item.link) {
              return (
                <a href={item.link} class="block hover:scale-105 transition-transform duration-200">
                  <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
                    <div class="mb-4">
                      <Image src={featureImage} alt={item.title} class="w-full h-48 object-cover rounded-lg" />
                    </div>
                    <div class="flex items-start">
                      <div class="text-3xl text-cyan-500 mr-4">
                        <i class={item.icon}></i>
                      </div>
                      <div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-3">{item.title}</h3>
                        <p class="text-gray-600">{item.description}</p>
                        <div class="mt-4">
                          <span class="inline-flex items-center text-cyan-600 hover:text-cyan-800 font-medium">
                            了解更多 <i class="fas fa-arrow-right ml-2"></i>
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>
              );
            } else {
              return (
                <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
                  <div class="mb-4">
                    <Image src={featureImage} alt={item.title} class="w-full h-48 object-cover rounded-lg" />
                  </div>
                  <div class="flex items-start">
                    <div class="text-3xl text-cyan-500 mr-4">
                      <i class={item.icon}></i>
