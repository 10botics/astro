// Course highlights
const courseHighlights = [
  {
    title: "系統化教學",
    description: "從基礎到進階，循序漸進的課程設計，讓學員扎實掌握每個建築技巧。",
    icon: "fas fa-graduation-cap"
  },
  {
    title: "實戰專題",
    description: "三大主題建築專題實作：魔法森林小屋、珊瑚家園、中世紀庭園，涵蓋多種建築風格。",
    icon: "fas fa-hammer"
  },
  {
    title: "創意發揮",
