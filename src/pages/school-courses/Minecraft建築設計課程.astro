const { title, subtitle, tags, description, detailedDescription, heroImage: heroImg } = courseData;
---

<Layout title={title} description={description}>
  <main>
    <!-- Hero Section -->
    <HeroSection 
      title={title}
      subtitle={subtitle}
      tags={tags}
      description={detailedDescription}
      heroImage={heroImg}
    />

    <!-- Course Introduction -->
    <section class="section-padding bg-white">
      <div class="container-standard">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-4xl font-bold mb-6">課程簡介</h2>
          <p class="text-lg text-gray-700 leading-relaxed mb-8">
            {detailedDescription}
          </p>
          <div class="grid md:grid-cols-3 gap-6 mt-12">
            <div class="card-base p-6">
              <div class="text-4xl text-brand-cyan-600 mb-4">
                <i class="fas fa-clock"></i>
              </div>
              <h3 class="text-xl font-bold mb-2">課程時長</h3>
              <p class="text-gray-700">10 小時</p>
            </div>
            <div class="card-base p-6">
              <div class="text-4xl text-brand-cyan-600 mb-4">
                <i class="fas fa-users"></i>
              </div>
              <h3 class="text-xl font-bold mb-2">適合對象</h3>
              <p class="text-gray-700">中學生</p>
            </div>
            <div class="card-base p-6">
              <div class="text-4xl text-brand-cyan-600 mb-4">
                <i class="fas fa-laptop"></i>
              </div>
              <h3 class="text-xl font-bold mb-2">所需器材</h3>
              <p class="text-gray-700">電腦、Minecraft 帳號</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Course Highlights -->
    <section class="section-padding bg-gray-50">
      <div class="container-standard">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold mb-4">課程重點</h2>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
          {courseHighlights.map((highlight) => (
            <div class="card-base card-hover text-center p-8">
              <div class="text-5xl text-brand-cyan-600 mb-4">
                <i class={highlight.icon}></i>
              </div>
              <h3 class="text-xl font-bold mb-3">{highlight.title}</h3>
              <p class="text-gray-700">{highlight.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Learning Outcomes -->
    <section class="section-padding bg-white">
      <div class="container-standard">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold mb-4">學習成果</h2>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {learningOutcomes.map((outcome) => (
            <div class="card-base card-hover text-center p-6">
              <div class="text-4xl text-brand-cyan-600 mb-4">
                <i class={outcome.icon}></i>
              </div>
              <h3 class="text-xl font-bold mb-3">{outcome.title}</h3>
              <p class="text-gray-700">{outcome.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Course Outline -->
    <section class="section-padding bg-gray-50">
      <div class="container-standard">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold mb-4">課程大綱</h2>
          <p class="text-lg text-gray-600">10 個課節，循序漸進學習建築技巧</p>
        </div>
        <div class="max-w-5xl mx-auto space-y-6">
          {courseOutline.map((lesson, index) => (
            <div class="card-base card-hover p-6">
              <h3 class="text-xl font-bold mb-4 text-brand-cyan-600">{lesson.title}</h3>
              <ul class="space-y-2">
                {lesson.content.map((item) => (
                  <li class="flex items-start">
                    <i class="fas fa-check-circle text-brand-cyan-500 mt-1 mr-3"></i>
                    <span class="text-gray-700">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </section>

    <!-- FAQ Section -->
    <QnASection faqs={faqData} />

    <!-- Related Courses Section -->
    <RelatedCourses courseTags={courseData.tags} courseTitle={courseData.title} currentCourseSlug="minecraft-building-design" context="course" />

    <!-- Related News Section -->
    <RelatedNews courseTags={courseData.tags} courseTitle={courseData.title} />

    <!-- Contact Form -->
    <ContactSection subtitle="想了解更多關於 Minecraft 建築設計課程的資訊？歡迎聯絡我們，我們會為您提供詳細的課程安排和報名資訊。" />
  </main>
</Layout>

