// SEO metadata
const title = "Swift Playgrounds 初階編程 - 10教育";
const description = courseData.description;
const ogImage = swiftPlaygroundsHero.src;
---

<Layout title={title} description={description} ogImage={ogImage}>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  
  <HeroSection 
    title={courseData.title}
    subtitle={courseData.subtitle}
    tags={courseData.tags}
    videoId={courseData.videoId}
    description={courseData.detailedDescription}
    heroImage={courseData.heroImage}
  />

  <!-- Course requirements section -->
  <section class="section-padding bg-white">
    <div class="container-standard">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">課程要求</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {courseRequirements.map((requirement) => (
          <div class="card-base card-hover p-6 text-center">
            <div class="w-12 h-12 bg-brand-cyan-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <i class={`${requirement.icon} text-xl text-white`}></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-800 mb-2">{requirement.title}</h3>
            <p class="text-gray-600">{requirement.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Course highlights section -->
  <section class="section-padding bg-gray-50">
    <div class="container-standard">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">課程重點</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {courseHighlights.map((highlight) => (
          <div class="card-base card-hover p-6">
            <div class="flex items-center mb-4">
              <div class="w-8 h-8 bg-brand-cyan-600 rounded-full flex items-center justify-center mr-3">
                <i class={`${highlight.icon} text-sm text-white`}></i>
              </div>
              <h3 class="text-lg font-semibold text-gray-800">{highlight.title}</h3>
            </div>
            <p class="text-gray-600">{highlight.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Course content/curriculum section -->
  <SingleCourseContent 
    items={curriculumItems} 
    hours="15 小時"
    images={[
      { src: swiftPlaygroundsCoding, alt: "Swift Playgrounds coding" },
      { src: swiftPlaygroundsTesting, alt: "Swift Playgrounds testing" }
    ]}
  />

  <!-- Course Schedule -->
  <section class="section-padding bg-white">
    <div class="container-standard">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">課程安排</h2>

      <div class="card-base p-8 max-w-2xl mx-auto">
        <div class="flex items-center mb-4">
          <div class="w-8 h-8 bg-semantic-warning rounded-full flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-800">完整課程 (15 小時)</h3>
        </div>
        <p class="text-gray-600 whitespace-pre-line">建議一個學期完成 10 節課堂，每節 1.5 小時。
*可根據學校需要調整課堂數及時數</p>
      </div>

      <div class="text-center mt-8">
        <p class="text-gray-600">歡迎填妥下方表格讓同事為你提供咨詢。</p>
      </div>
    </div>
  </section>

  <!-- Photo Gallery -->
  <section class="section-padding bg-gray-50">
    <div class="container-standard">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">精選照片</h2>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="aspect-square overflow-hidden rounded-lg shadow-card">
          <Image src={swiftPlaygroundsThinking} alt="Swift Playgrounds thinking" class="w-full h-full object-cover" />
        </div>
        <div class="aspect-square overflow-hidden rounded-lg shadow-card">
          <Image src={swiftPlaygroundsTrying} alt="Swift Playgrounds trying" class="w-full h-full object-cover" />
        </div>
        <div class="aspect-square overflow-hidden rounded-lg shadow-card">
          <Image src={swiftPlaygroundsDoing} alt="Swift Playgrounds doing" class="w-full h-full object-cover" />
        </div>
        <div class="aspect-square overflow-hidden rounded-lg shadow-card">
          <Image src={swiftPlaygroundsCoding2} alt="Swift Playgrounds coding" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </section>

  <QnASection faqs={faqItems} />
  <!-- Related Courses Section -->
  <RelatedCourses courseTags={courseData.tags} courseTitle={courseData.title} currentCourseSlug="swiftplaygrounds" context="course" />
  <!-- Related News Section -->
  <RelatedNews courseTags={courseData.tags} courseTitle={courseData.title} />



  <!-- Contact Section -->
  <ContactSection subtitle="想了解更多關於 SwiftPlaygrounds 編程課程的資訊？歡迎聯絡我們，我們會為您提供詳細的課程安排和報名資訊。" />
</Layout> 
