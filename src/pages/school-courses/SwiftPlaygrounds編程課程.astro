// Course requirements
const courseRequirements = [
  {
    icon: "fas fa-clock",
    title: "課時",
    description: "15 小時"
  },
  {
    icon: "fas fa-laptop",
    title: "所需設備",
    description: "Mac 或 iPad"
  },
  {
    icon: "fas fa-user-graduate",
