import landmark1 from '../../assets/images/school-courses/Minecraft編程課程/landmark-1.jpg';
import landmark2 from '../../assets/images/school-courses/Minecraft編程課程/landmark-2.jpg';
import landmark3 from '../../assets/images/school-courses/Minecraft編程課程/landmark-3.png';
