---

<Layout title={courseData.title} description={courseData.description}>
  <!-- Hero Section -->
  <HeroSection 
    title={courseData.title}
    subtitle={courseData.subtitle}
    description={courseData.description}
    videoId={courseData.videoId}
    tags={courseData.tags}
  />

  <!-- Course Features -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">課程特色</h2>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {courseFeatures.map((feature) => (
            <div class="text-center">
              <div class="flex justify-center mb-4">
                <i class={`${feature.icon} text-4xl text-blue-600`}></i>
              </div>
              <h3 class="text-xl font-semibold mb-3">{feature.title}</h3>
              <p class="text-gray-600 text-sm">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Course Content -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">課程內容</h2>
        <div class="text-center mb-8">
          <p class="text-xl text-gray-600">共 15 小時</p>
          <p class="text-sm text-gray-500">* 可根據學校需要調整</p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8 mb-8">
          <div>
            <Image 
              src={grabber1} 
              alt="Lego Spike Prime grabber" 
              class="rounded-lg shadow-lg"
            />
          </div>
          <div>
            <Image 
              src={code2} 
              alt="Lego Spike Prime code and car" 
              class="rounded-lg shadow-lg"
            />
          </div>
        </div>
        
        <AccordionSection title="課程大綱" items={courseContent} />
      </div>
    </div>
  </section>

  <!-- Course Arrangement -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">課程安排</h2>
        <div class="grid md:grid-cols-1 gap-8">
          {courseArrangement.map((arrangement) => (
            <div class="bg-white p-6 rounded-lg shadow-md">
              <div class="flex items-center mb-4">
                <i class="fas fa-star text-yellow-500 text-xl mr-3"></i>
                <h3 class="text-xl font-semibold">{arrangement.title}</h3>
              </div>
              <p class="text-gray-600">{arrangement.description}</p>
            </div>
          ))}
        </div>
        <div class="text-center mt-8">
          <p class="text-gray-600">歡迎填妥下方表格讓同事為你提供咨詢。</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Photo Gallery -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">精選照片</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="group cursor-pointer">
            <Image 
              src={hopper} 
              alt="Lego Spike Prime obstacles" 
              class="w-full h-48 object-cover rounded-lg shadow-md group-hover:shadow-lg transition-shadow"
            />
          </div>
          <div class="group cursor-pointer">
            <Image 
              src={driving} 
              alt="Lego Spike Prime ultrasonic sensor" 
              class="w-full h-48 object-cover rounded-lg shadow-md group-hover:shadow-lg transition-shadow"
            />
          </div>
          <div class="group cursor-pointer">
            <Image 
              src={sensing} 
              alt="Lego Spike Prime color sensor" 
              class="w-full h-48 object-cover rounded-lg shadow-md group-hover:shadow-lg transition-shadow"
            />
          </div>
          <div class="group cursor-pointer">
            <Image 
              src={auto} 
              alt="Lego Spike Prime automation" 
              class="w-full h-48 object-cover rounded-lg shadow-md group-hover:shadow-lg transition-shadow"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <QnASection faqs={faqData} />

  <!-- Contact Form -->
  <PaperformEmbed formId="qhmoqcvc" title="聯絡我們" />
</Layout> 