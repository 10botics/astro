---
import Layout from '../../../../layouts/Layout.astro';
import { Image } from 'astro:assets';

const projectData = {
  title: "踩地雷挑戰",
  subtitle: "Minefield Challenge",
  student: "學生作品",
  description: "這是一個經典踩地雷遊戲的網頁版本，包含多種難度等級和智能提示系統。",
  technologies: ["HTML", "CSS", "JavaScript", "遊戲邏輯"],
  features: [
    "多種難度等級",
    "智能提示系統",
    "計時器功能",
    "最高分記錄"
  ]
};
---

<Layout title={`${projectData.title} - 學生作品`}>
  <div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-red-500 to-red-600 text-white py-16">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="text-center">
          <h1 class="text-4xl font-bold mb-4">{projectData.title}</h1>
          <p class="text-xl mb-6">{projectData.subtitle}</p>
          <p class="text-lg opacity-90 max-w-2xl mx-auto">{projectData.description}</p>
        </div>
      </div>
    </section>

    <!-- Project Details -->
    <section class="py-16">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- Project Info -->
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">項目詳情</h2>
            <div class="space-y-6">
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">開發者</h3>
                <p class="text-gray-700">{projectData.student}</p>
              </div>
              
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">使用技術</h3>
                <div class="flex flex-wrap gap-2">
                  {projectData.technologies.map((tech) => (
                    <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm font-medium">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>

              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">主要功能</h3>
                <ul class="space-y-2">
                  {projectData.features.map((feature) => (
                    <li class="flex items-center text-gray-700">
                      <i class="fas fa-check-circle text-red-500 mr-3"></i>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>

          <!-- Game Preview -->
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">遊戲預覽</h2>
            <div class="bg-white rounded-lg shadow-lg p-6">
              <div class="aspect-w-16 aspect-h-9 bg-gray-100 rounded-lg mb-4">
                <div class="flex items-center justify-center h-64 bg-gradient-to-br from-red-100 to-pink-100 rounded-lg">
                  <div class="text-center">
                    <i class="fas fa-bomb text-4xl text-red-500 mb-4"></i>
                    <p class="text-gray-600">踩地雷遊戲</p>
                  </div>
                </div>
              </div>
              <p class="text-gray-600 text-sm text-center">經典踩地雷的現代化版本</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Game Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-4xl">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">試玩遊戲</h2>
        <div class="bg-gray-50 rounded-lg p-8">
          <iframe 
            src="/games/ai-game-coding/MinefieldChallenge/index.html"
            title="踩地雷挑戰"
            width="100%"
            height="600px"
            frameborder="0"
            allowfullscreen
            class="w-full border-0 rounded-lg"
          ></iframe>
        </div>
      </div>
    </section>

    <!-- Back to Course -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 max-w-6xl text-center">
        <a 
          href="/school-courses/人工智能遊戲編程課程" 
          class="inline-flex items-center px-6 py-3 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors"
        >
          <i class="fas fa-arrow-left mr-2"></i>
          返回課程頁面
        </a>
      </div>
    </section>
  </div>
</Layout>

 