---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

// Import homepage components
import HeroWithStats from '../../components/homepage/HeroWithStats.astro';
import FeatureWithScreenshot from '../../components/homepage/FeatureWithScreenshot.astro';
import FeatureCentered2x2 from '../../components/homepage/FeatureCentered2x2.astro';
import CTAWithImage from '../../components/homepage/CTAWithImage.astro';
import StatsWithBackground from '../../components/homepage/StatsWithBackground.astro';

// Hero data
const heroData = {
  title: "AI數碼動畫展",
  subtitle: "AI Digital Animation Exhibition",
  description: "AI數碼動畫展是一個簡單有趣的 STEM Day 活動，學生可按主題設計喜歡的圖案/角色，通過人工智能把圖案轉換成栩栩如生的動畫，呈現在學校LED Wall或螢幕上面跳舞，讓學生能以輕鬆有趣的方式體驗生成式AI技術。",
  primaryCta: { text: "立即聯絡我們", link: "/contact-us" },
  secondaryCta: { text: "了解更多", link: "/school-courses" },
  stats: [
    { number: "3", label: "活動體驗區" },
    { number: "AI", label: "人工智能技術" },
    { number: "100%", label: "互動體驗" },
    { number: "LED", label: "大屏幕展示" }
  ]
};

// Activity content data
const activityData = {
  title: "活動内容",
  subtitle: "Activity Content",
  description: "工作坊分為三個活動體驗區，讓學生從不同的活動中投入參與：",
  features: [
    {
      name: "AI圖像生成體驗區",
      description: "學生可使用AI圖像生成工具Mid Journey進行創作，根據自己喜愛的角色輸入不同關鍵詞，創作出屬於自己的人物，並在LED屏幕上起舞。更有機會將自己的AI作品製成相片打印出來，永久留念！",
      icon: "🎨"
    },
    {
      name: "沉浸式創意手繪站",
      description: "學生可以為自己喜歡的圖案填上色彩，也可以繪畫出獨一無二的角色放進動畫展中，透過人工智能偵測角色四肢體架並製作出動態圖，盡情發揮無限的創意想像。",
      icon: "✏️"
    },
    {
      name: "打卡互動區",
      description: "學生可前往打卡區進行拍照，通過人工智能系統化身為數碼小人物，在屏幕上與其他角色互動。學生將在大屏幕的人海中尋找自己的身影，亦是一個考驗觀察力的好機會。",
      icon: "📸"
    }
  ]
};

// Complete course data
const completeCourseData = {
  title: "完整課堂",
  subtitle: "Complete Course",
  description: "更自由和個性化的學習體驗，包括主題/人物角色/音樂的製作，以自訂你的AI動態繪畫",
  features: [
    {
      name: "背景音樂",
      description: "除了STEM活動上可以使用的歌曲外，完整課堂為學生提供如何進一步學習利用生成工具進行背景音樂的獨立創作。",
      icon: "🎵"
    },
    {
      name: "主題背景",
      description: "與提供的預設不同，學生可以按照主題的需要或自己的想法，使用AI圖像生成系統進行生成，配合AI啟蒙課程，學生將了解如何自行創作主題背景並使用AI圖像生成的技巧。",
      icon: "🖼️"
    },
    {
      name: "繪畫圖案",
      description: "完整課堂為學生提供人物角色的創建，同學們可以按照所見所想，又或是相應的主題，創作喜歡的圖像角色。同時，透過學習AI生成的繪畫可以提供不同圖案的線稿供學生填色，發揮學生的創意，創造屬於自己獨一無二的角色。",
      icon: "🎨"
    },
    {
      name: "課程安排",
      description: "提供多元化活動形式，包括工作坊、體驗活動和完整課程，讓學生根據興趣和時間安排選擇適合的學習方式。",
      icon: "📚"
    }
  ]
};

// Stats data
const statsData = {
  title: "課程特色",
  description: "AI數碼動畫展結合了人工智能、藝術創作和互動體驗，為學生提供全方位的STEM學習體驗",
  stats: [
    { number: "AI", label: "人工智能技術", description: "使用最新的AI圖像生成和動畫技術" },
    { number: "3", label: "體驗區域", description: "AI圖像生成、創意手繪、互動打卡" },
    { number: "100%", label: "互動參與", description: "每個學生都能參與創作和展示" }
  ]
};

// CTA data
const ctaData = {
  title: "準備好體驗AI數碼動畫展了嗎？",
  description: "讓學生透過人工智能技術，創造屬於自己的數碼動畫作品，體驗科技與藝術的完美結合。",
  ctaText: "立即聯絡我們",
  ctaLink: "/contact-us",
  secondaryCtaText: "查看更多課程",
  secondaryCtaLink: "/school-courses",
  image: "/src/assets/images/school-courses/ai-digital-animation-exhibition/ai-background-theme.jpg",
  imageAlt: "AI數碼動畫展背景主題"
};
---

<Layout title="AI數碼動畫展 | 10教育">
  <main class="min-h-screen">
    <!-- Hero Section -->
    <HeroWithStats {...heroData} />

    <!-- Activity Content Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">{activityData.title}</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">{activityData.description}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {activityData.features.map((feature, index) => (
            <div class="bg-white rounded-lg shadow-lg p-8">
              <div class="text-center mb-6">
                <div class="text-4xl mb-4">{feature.icon}</div>
                <h3 class="text-xl font-bold text-gray-900 mb-4">{feature.name}</h3>
              </div>
              <p class="text-gray-600 leading-relaxed mb-6">{feature.description}</p>
              {index < 3 && (
                <div class="mt-4">
                  <img 
                    src={`/src/assets/images/school-courses/ai-digital-animation-exhibition/ai-animation-screenshot-${index + 1}.png`}
                    alt={`${feature.name} 截圖`}
                    class="w-full h-48 object-cover rounded-lg shadow-md"
                  />
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Complete Course Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">{completeCourseData.title}</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">{completeCourseData.description}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {completeCourseData.features.map((feature, index) => {
            const imageMap = [
              '/src/assets/images/school-courses/ai-digital-animation-exhibition/ai-music-generation.png',
              '/src/assets/images/school-courses/ai-digital-animation-exhibition/ai-background-theme.jpg',
              '/src/assets/images/school-courses/ai-digital-animation-exhibition/ai-drawing-patterns.png',
              '/src/assets/images/school-courses/ai-digital-animation-exhibition/ai-course-arrangement.png'
            ];
            return (
              <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-6">
                <div class="text-center mb-4">
                  <div class="text-3xl mb-3">{feature.icon}</div>
                  <h3 class="text-lg font-bold text-gray-900 mb-2">{feature.name}</h3>
                </div>
                <p class="text-gray-600 text-sm leading-relaxed mb-4">{feature.description}</p>
                <div class="mt-4">
                  <img 
                    src={imageMap[index]}
                    alt={`${feature.name} 示範圖片`}
                    class="w-full h-32 object-cover rounded-lg shadow-sm"
                  />
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <StatsWithBackground {...statsData} />

    <!-- CTA Section -->
    <CTAWithImage {...ctaData} />
  </main>
</Layout> 