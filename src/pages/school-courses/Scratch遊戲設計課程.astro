// Student work examples (images from the original site)
const studentWorkExamples = [
  {
    title: "Scratch 火箭遊戲",
    image: scratchRocketGame,
    videoUrl: "https://www.youtube.com/embed/hvhG7mImCAg"
  },
  {
    title: "青蛙過馬路遊戲",
    image: scratchFrogGame
