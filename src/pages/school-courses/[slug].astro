---
// Dynamic route to handle English URLs while using Chinese-named components
export async function getStaticPaths() {
  return [
    { params: { slug: 'ai-game-coding' } },
    { params: { slug: 'ai-digital-animation-exhibition' } },
    { params: { slug: 'codrone' } },
    { params: { slug: 'cospaces' } },
    { params: { slug: 'ksp' } },
    { params: { slug: 'minecraft' } },
    { params: { slug: 'procreate' } },
    { params: { slug: 'raspberry-pi' } },
    { params: { slug: 'scratch-ai-programming' } },
    { params: { slug: 'scratch-game-design' } },
    { params: { slug: 'swiftplaygrounds' } },
    { params: { slug: 'tello' } }
  ];
}

const { slug } = Astro.params;

// Import the Chinese-named component using a switch statement
let ChineseComponent;
switch (slug) {
  case 'ai-game-coding':
    ChineseComponent = await import('./人工智能遊戲編程課程.astro');
    break;
  case 'ai-digital-animation-exhibition':
    ChineseComponent = await import('./AI數碼動畫展.astro');
    break;
  case 'codrone':
    ChineseComponent = await import('./CoDrone無人機課程.astro');
    break;
  case 'cospaces':
    ChineseComponent = await import('./CoSpaces 遊戲設計課程.astro');
    break;
  case 'ksp':
    ChineseComponent = await import('./ksp太空計劃課程.astro');
    break;
  case 'minecraft':
    ChineseComponent = await import('./Minecraft校園創建課程.astro');
    break;
  case 'procreate':
    ChineseComponent = await import('./Procreate數位藝術課程.astro');
    break;
  case 'raspberry-pi':
    ChineseComponent = await import('./raspberry-pi編程課程.astro');
    break;
  case 'scratch-ai-programming':
    ChineseComponent = await import('./Scratch 人工智能編程.astro');
    break;
  case 'scratch-game-design':
    ChineseComponent = await import('./Scratch遊戲設計課程.astro');
    break;
  case 'swiftplaygrounds':
    ChineseComponent = await import('./SwiftPlaygrounds編程課程.astro');
    break;
  case 'tello':
    ChineseComponent = await import('./Tello 無人機課程.astro');
    break;
  default:
    throw new Error(`Unknown slug: ${slug}`);
}
