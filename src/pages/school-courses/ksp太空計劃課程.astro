  <DualCourseContent 
    beginnerTitle="初階課程"
    advancedTitle="進階課程"
    beginnerItems={curriculumItems}
    advancedItems={advancedCurriculumItems}
    beginnerHours="10 小時"
    advancedHours="10 小時"
  />

  <!-- Course Schedule -->
  <section class="bg-gray-50 py-16">
