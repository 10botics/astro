---

<Layout title="10教育 - 香港領先的 STEM 教育專家 | 創新科技課程">
  <main>
    <!-- Hero Section with Stats -->
    <HeroWithStats 
      title={heroData.title}
      subtitle={heroData.subtitle}
      description={heroData.description}
      primaryCta={heroData.primaryCTA}
      secondaryCta={heroData.secondaryCTA}
      stats={heroData.stats}
    />

    <!-- Featured Courses Section -->
    <FeatureCentered2x2 
      sectionTitle="精選課程"
      sectionSubtitle="我們為學生精心設計的專業 STEM 課程"
      features={featuredCourses}
    />

    <!-- Services Section -->
    <FeatureWithLargeIcons 
      sectionTitle="我們的服務"
      sectionSubtitle="提供一系列STEM教育資源和方案"
      features={servicesData}
    />

    <!-- Statistics Section -->
    <StatsWithBackground 
      title={statsData.title}
      subtitle={statsData.subtitle}
      backgroundImage={statsData.backgroundImage}
      stats={statsData.stats}
    />

    <!-- Testimonials Section -->
    <TestimonialsGrid 
      sectionTitle="客戶評價"
      sectionSubtitle="來自我們合作學校的真實回饋"
      testimonials={testimonialsData}
    />

    <!-- News Section -->
    <BlogGrid 
      sectionTitle="最新消息"
      sectionSubtitle="關注我們的最新活動和成就"
      posts={newsData}
    />

    <!-- Partners Section -->
    <PartnersSection 
      sectionTitle="客戶及合作機構"
      sectionSubtitle="感謝所有信任我們的學校和機構"
      partners={partnersData}
    />

    <!-- FAQ Section -->
