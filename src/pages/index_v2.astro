      sectionTitle="常見問題"
      sectionSubtitle="解答您對我們 STEM 課程的疑問"
      faqs={faqData}
    />

    <!-- Call to Action -->
    <CTAWithImage 
      title={ctaData.title}
      description={ctaData.description}
      primaryButton={ctaData.primaryButton}
      secondaryButton={ctaData.secondaryButton}
      image={ctaData.image}
    />
  </main>
</Layout> 