// Dynamic route to handle URL mapping between English URLs and Chinese filename components
export async function getStaticPaths() {
  return [
    { params: { slug: 'about' } },
    { params: { slug: 'ai-art-competition-2024' } },
    { params: { slug: 'ai-art-competition-2025' } },
    { params: { slug: 'ai-art-competition-2025-result' } },
    { params: { slug: 'competition-drone2024' } },
    { params: { slug: 'competition-drone2024-competitionlist'}},
    { params: { slug: 'competition-ksp2022' } },
    { params: { slug: 'competition-minecraft2021' } },
    { params: { slug: 'competition-minecraft2022' } },
    { params: { slug: 'competition-minecraft2023' } },
    // Add more mappings here as needed
  ];
}

const { slug } = Astro.params;

// Import the Chinese filename component based on the slug
let ChineseComponent;
switch (slug) {
  case 'about':
    ChineseComponent = await import('./關於我們.astro');
    break;
  case 'ai-art-competition-2024':
    ChineseComponent = await import('./校際AI藝術創作大賽 2024.astro');
    break;
  case 'ai-art-competition-2025':
    ChineseComponent = await import('./第三屆 校際AI藝術創作大賽.astro');
    break;
  case 'ai-art-competition-2025-result':
    ChineseComponent = await import('./第三屆校際AI藝術創作大賽《智畫神話》result.astro');
    break;
  case 'competition-drone2024':
    ChineseComponent = await import('./學界無人機救援挑戰賽.astro');
    break;
  case 'competition-drone2024-competitionlist':
    ChineseComponent = await import('./學界無人機救援挑戰賽-比賽名單.astro');
    break;
  case 'competition-ksp2022':
    ChineseComponent = await import('./香港航天電競大賽 2022.astro');
    break;
  case 'competition-minecraft2021':
    ChineseComponent = await import('./Minecraft 校園創建計劃 2021.astro');
    break;
  case 'competition-minecraft2022':
    ChineseComponent = await import('./Minecraft 校園創建計劃 2022.astro');
    break;
  case 'competition-minecraft2023':
    ChineseComponent = await import('./Minecraft 校園創建計劃 2023.astro');
    break;
  default:
    throw new Error(`Unknown slug: ${slug}`);
}
