// Dynamic route to handle URL mapping between English URLs and Chinese filename components
export async function getStaticPaths() {
  return [
    { params: { slug: 'ai-art-competition-2025' } },
    { params: { slug: 'ai-art-competition-2025-result' } },
    { params: { slug: 'competition-drone2024' } },
    { params: { slug: 'competition-drone2024-competitionlist'}},
    // Add more mappings here as needed
  ];
}

const { slug } = Astro.params;

// Import the Chinese filename component based on the slug
let ChineseComponent;
switch (slug) {
  case 'ai-art-competition-2025':
    ChineseComponent = await import('./第三屆 校際AI藝術創作大賽.astro');
    break;
  case 'ai-art-competition-2025-result':
    ChineseComponent = await import('./第三屆校際AI藝術創作大賽《智畫神話》result.astro');
    break;
  case 'competition-drone2024':
    ChineseComponent = await import('./學界無人機救援挑戰賽.astro');
    break;
  case 'competition-drone2024-competitionlist':
    ChineseComponent = await import('./學界無人機救援挑戰賽-比賽名單.astro');
  default:
    throw new Error(`Unknown slug: ${slug}`);
}
